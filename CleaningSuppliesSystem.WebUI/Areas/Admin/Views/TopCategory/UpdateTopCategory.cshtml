@model UpdateTopCategoryDto
@{
    ViewData["Title"] = "Üst Kategori Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form id="updateTopCategoryForm" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <label>Üst Kategori Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <button type="button" onclick="updateTopCategory()" class="btn btn-warning-600">Güncelle</button>
</form>

@section Scripts {
    <script>
        function updateTopCategory() {
            const form = document.getElementById("updateTopCategoryForm");
            const theme = document.documentElement.getAttribute("data-theme");

            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            Swal.fire({
                title: "Değişiklikler kaydedilsin mi?",
                text: "İşlemi onaylıyor musunuz?",
                icon: "question",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, kaydet!",
                cancelButtonText: "İptal",
                background: theme === "dark" ? "#1e1e2f" : "#fff",
                color: theme === "dark" ? "#fff" : "#000",
                allowOutsideClick: false,
                allowEscapeKey: false,
                allowEnterKey: false
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }

    </script>
}