@model ProductViewModel
@{
    ViewData["Title"] = "Silinen Ürünler Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
   
    ViewData["PermanentDeleteUrl"] = "~/Admin/Product/PermanentDeleteProduct";
    ViewData["PermanentDeleteConfirmTitle"] = "Üst kategori kalıcı olarak silinsin mi?";

    ViewData["UndoSoftDeleteUrl"] = "~/Admin/Product/UndoSoftDeleteMultiple";
    ViewData["UndoSoftDeleteConfirmTitle"] = "Seçili üst kategoriler geri alınsın mı?";

    ViewData["PermanentDeleteMultipleUrl"] = "~/Admin/Product/PermanentDeleteMultiple";
    ViewData["PermanentDeleteMultipleConfirmTitle"] = "Seçili üst kategoriler kalıcı olarak silinsin mi?";

    int count = 0;
}

<div class="card basic-data-table">
    @Html.AntiForgeryToken()
    <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
        <h5 class="card-title mb-0 mt-1">Silinen Ürünler Listesi</h5>
        <div class="d-flex flex-wrap align-items-center gap-2 ms-auto md-0 mt-1">
            <button id="undosoftdeleteSelectedBtn" class="btn rounded-pill btn-success-600 radius-8 d-inline-flex align-items-center" disabled>
                <span class="material-symbols-outlined me-1">undo</span> Seçilenleri Geri Al
            </button>
            <button id="permanentdeleteSelectedBtn" class="btn rounded-pill btn-danger-600 radius-8 d-inline-flex align-items-center" disabled>
                <span class="material-symbols-outlined me-1">delete_forever</span> Seçilenleri Kalıcı Sil
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive" style="overflow-y: hidden;">
        <table class="table table-hover mb-0" id="dataTable" style="width: 100%; margin-top: 10px;">
            <thead>
                <tr>
                    <th class="text-start">
                        <input type="checkbox" id="selectAll" class="form-check-input" /> #
                    </th>
                    <th>Ürün Fotoğrafı</th>
                    <th> Üst Kategori | Alt Kategori | Ürün Grubu | Marka | Ürün Adı</th>
                    <th>Fiyat Bilgileri</th>
                    <th>Oluşturma | Son Güncelleme | Silinme Tarihleri</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProductViewList)
                {
                    count++;
                    <tr>
                        <td>
                            <label class="d-flex align-items-center mb-0" style="cursor:pointer;">
                                <input type="checkbox" class="form-check-input row-checkbox me-3" data-id="@item.Id" />
                                @count
                            </label>
                        </td>
                            <td class="text-center">
                                <!-- Thumbnail -->
                                <div class="shadow-4 hover-scale-img border radius-16 overflow-hidden p-8 d-inline-flex align-items-center" style="width:100px; height:100px;">
                                    <a href="@Url.Content(item.ImageUrl)"
                                       data-bs-toggle="modal"
                                       data-bs-target="#imageModal_@item.Id"
                                       class="w-100 h-100 d-flex radius-12 overflow-hidden">
                                        <img src="@Url.Content(item.ImageUrl)"
                                             class="card-img-top shadow-lg w-100 h-100 object-fit-cover cursor-pointer hover-scale-img__img"
                                             alt="Banner" />
                                    </a>
                                </div>

                                <!-- Modal -->
                                <div class="modal fade" id="imageModal_@item.Id" tabindex="-1" aria-hidden="true"
                                     data-bs-backdrop="true" data-bs-keyboard="true" style="background-color: rgba(0,0,0,0.6);">
                                    <div class="modal-dialog modal-fullscreen m-0 p-0">
                                        <div class="modal-content bg-transparent border-0">
                                            <div class="modal-body p-0 d-flex justify-content-center align-items-center position-relative">
                                                <img src="@Url.Content(item.ImageUrl)" class="img-fluid rounded" alt="Preview" />
                                                <button type="button"
                                                        class="btn-close position-absolute"
                                                        data-bs-dismiss="modal" aria-label="Close"
                                                        style="top: 1rem; right: 2rem; width: 2.5rem; height: 2.5rem;"></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </td>
                            <td>
                                <div>Üst Kategori: @item.TopCategoryName</div>
                                <div>Alt Kategori: @item.SubCategoryName</div>
                                <div>Ürün Grubu: @item.CategoryName</div>
                                <div>Marka Adı: @item.BrandName</div>
                                <div>Ürün Adı: <b><u>@item.Name</u></b></div>
                            </td>
                        <td style="font-size:14px; line-height:1.6;">
                            <!-- Birim Fiyat -->
                            <div class="d-flex align-items-center gap-2 mb-1 px-3 py-2 rounded-pill bg-primary-50">
                                <span class="material-symbols-outlined me-1" style="color:#1976d2;">sell</span>
                                <span><b>Birim Fiyat:</b> @item.UnitPrice.ToString("N2")₺</span>
                            </div>

                            <!-- KDV Oranı -->
                            <div class="d-flex align-items-center gap-2 mb-1 px-3 py-2 rounded-pill bg-warning-50">
                                <span class="material-symbols-outlined me-1" style="color:#f57c00;">percent</span>
                                <span><b>KDV Oranı:</b> @item.VatRate.ToString("F0")%</span>
                            </div>

                            <!-- KDV Dahil Fiyat -->
                            <div class="d-flex align-items-center gap-2 mb-1 px-3 py-2 rounded-pill bg-success-50">
                                <span class="material-symbols-outlined me-1" style="color:#388e3c;">account_balance_wallet</span>
                                <span><b>(+KDV)Fiyat:</b> @item.PriceWithVat.ToString("N2")₺</span>
                            </div>

                            <!-- İndirim Oranı -->
                            <div class="d-flex align-items-center gap-2 mb-1 px-3 py-2 rounded-pill bg-danger-50">
                                <span class="material-symbols-outlined me-1" style="color:#d32f2f;">local_offer</span>
                                <span><b>İndirim Oranı:</b> @item.DiscountRate.ToString("F0")%</span>
                            </div>

                            <!-- İndirimli Fiyat -->
                            <div class="d-flex align-items-center gap-2 mb-1 px-3 py-2 rounded-pill bg-info-50 fw-bold">
                                <span class="material-symbols-outlined me-1" style="color:#00796b;">price_check</span>
                                <span>(+KDV)İndirimli Fiyat: @item.DiscountedPriceWithVat.ToString("N2")₺</span>
                            </div>
                        </td>
                            <td>
                                <div class="d-flex flex-column gap-1">
                                    <span>
                                        🟢 <b>Oluşturma:</b>
                                        @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                    </span>
                                    <span>
                                        🟡 <b>Güncelleme:</b>
                                        @(item.UpdatedDate != null
                                            ? item.UpdatedDate.Value.ToString("dd.MM.yyyy HH:mm")
                                            : "Henüz güncelleme yapılmadı")
                                    </span>
                                    <span>
                                        🔴 <b>Silinme:</b>
                                        @item.DeletedDate.Value.ToString("dd.MM.yyyy HH:mm")
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-nowrap gap-2">
                                    <form asp-action="UndoSoftDeletedProduct" asp-controller="Product" asp-area="Admin" asp-route-id="@item.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn rounded-pill btn-success-600 radius-8 d-inline-flex align-items-center action-btn">
                                            <span class="material-symbols-outlined me-1 d-inline-flex align-items-center" style="font-size: 18px;">undo</span> Geri Al
                                        </button>
                                    </form>
                                    <button type="button"
                                            class="btn rounded-pill btn-danger-600 radius-8 d-inline-flex align-items-center btn-sm action-btn permanent-delete-btn"
                                            data-id="@item.Id">
                                        <span class="material-symbols-outlined me-1 d-inline-flex align-items-center" style="font-size: 18px;">delete_forever</span> Kalıcı Sil
                                    </button>
                                </div>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        const selectAll = document.getElementById('selectAll');
        const checkboxes = document.querySelectorAll('.row-checkbox');

        if (selectAll) {
            selectAll.addEventListener('change', function () {
                checkboxes.forEach(cb => cb.checked = this.checked);
                toggleMultiDeleteUI();
            });
        }

        document.addEventListener('change', e => {
            if (e.target.classList.contains('row-checkbox')) {
                toggleMultiDeleteUI();
            }
        });

        function toggleMultiDeleteUI() {
            const selectedCount = document.querySelectorAll('.row-checkbox:checked').length;

            const undoBtn = document.getElementById('undosoftdeleteSelectedBtn');
            const permanentDeleteBtn = document.getElementById('permanentdeleteSelectedBtn');

            if (undoBtn) undoBtn.disabled = selectedCount === 0;
            if (permanentDeleteBtn) permanentDeleteBtn.disabled = selectedCount === 0;

            // Tekli action butonları (satırdaki)
            document.querySelectorAll('.action-btn').forEach(btn => {
                btn.disabled = selectedCount > 0;
                btn.style.pointerEvents = selectedCount > 0 ? 'none' : 'auto';
                btn.style.opacity = selectedCount > 0 ? '0.5' : '1';
            });
        }
    </script>
}