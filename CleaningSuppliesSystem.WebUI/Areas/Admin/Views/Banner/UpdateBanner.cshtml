@model UpdateBannerDto

@{
    ViewData["Title"] = "Banner Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form id="updateBannerForm" method="post" asp-action="UpdateBanner" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl" />
    <input type="hidden" name="existingImageUrl" value="@ViewBag.ExistingImageUrl" />

    <div class="row gx-3 gy-4">

        <!-- Banner Kartı -->
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-header text-center">
                    <h5>Banner Güncelle</h5>
                </div>
                <div class="card-body d-flex flex-column">

                    <!-- Görsel Karşılaştırma -->
                    @if (!string.IsNullOrEmpty(ViewBag.ExistingImageUrl))
                    {
                        <div class="mb-3 text-center d-flex align-items-center justify-content-center" style="gap: 20px; flex-wrap: nowrap;">
                            <div>
                                <label>Mevcut Görsel</label><br />
                                <img src="@ViewBag.ExistingImageUrl" alt="Mevcut Görsel" class="img-thumbnail" style="max-height: 150px;" />
                            </div>
                            <div style="font-size: 2rem;">➡</div>
                            <div id="previewContainer" style="display: none; text-align: center;">
                                <label>Yeni Seçilen Görsel:</label><br />
                                <img id="imagePreview" src="#" alt="Yeni Görsel" class="img-thumbnail" style="max-height:150px; display:none;" />
                            </div>
                        </div>
                    }

                    <!-- Yeni Görsel Yükleme -->
                    <div class="mb-3">
                        <label for="imageUpload" class="border border-primary-600 fw-medium text-primary-600 px-16 py-12 radius-12 d-inline-flex align-items-center gap-2 bg-hover-primary-50" style="cursor:pointer;">
                            <iconify-icon icon="solar:upload-linear" class="text-xl"></iconify-icon>
                            Yeni Fotoğraf Yükle (Güncellemek için)
                            <input asp-for="ImageFile" type="file" accept="image/*" class="visually-hidden" id="imageUpload" onchange="previewImage(event)" />
                        </label>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <!-- Başlık -->
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-semibold text-primary-light text-sm mb-8">
                            Banner Başlık Adı <span class="text-danger-600">*</span>
                        </label>
                        <input asp-for="Title" class="form-control" placeholder="Başlık" maxlength="40" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Alt Başlık -->
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-semibold text-primary-light text-sm mb-8">
                            Banner Alt Başlık Adı <span class="text-danger-600">*</span>
                        </label>
                        <input asp-for="Subtitle" class="form-control" placeholder="Alt Başlık" maxlength="50" required />
                        <span asp-validation-for="Subtitle" class="text-danger"></span>
                    </div>

                    <!-- İstatistikler (Başlık + Değer Yan Yana) -->
                    <div class="row gx-2">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Statistic1Title" class="form-label fw-semibold text-primary-light text-sm mb-8">
                                İstatistik 1 Adı <span class="text-danger-600">*</span>
                            </label>
                            <input asp-for="Statistic1Title" class="form-control" placeholder="İstatistik 1 Başlığı" maxlength="15" required />
                            <span asp-validation-for="Statistic1Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Statistic1Title" class="form-label fw-semibold text-primary-light text-sm mb-8">
                                İstatistik 1 Değeri <span class="text-danger-600">*</span>
                            </label>
                            <input asp-for="Statistic1" class="form-control" placeholder="İstatistik 1 Değeri" maxlength="7" required />
                            <span asp-validation-for="Statistic1" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Statistic2Title" class="form-label fw-semibold text-primary-light text-sm mb-8">
                                İstatistik 2 Adı <span class="text-danger-600">*</span>
                            </label>
                            <input asp-for="Statistic2Title" class="form-control" placeholder="İstatistik 2 Başlığı" maxlength="15" required />
                            <span asp-validation-for="Statistic2Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Statistic1Title" class="form-label fw-semibold text-primary-light text-sm mb-8">
                                İstatistik 2 Değeri <span class="text-danger-600">*</span>
                            </label>
                            <input asp-for="Statistic2" class="form-control" placeholder="İstatistik 2 Değeri" maxlength="7" required />
                            <span asp-validation-for="Statistic2" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Statistic1Title" class="form-label fw-semibold text-primary-light text-sm mb-8">
                                İstatistik 3 Adı <span class="text-danger-600">*</span>
                            </label>
                            <input asp-for="Statistic3Title" class="form-control" placeholder="İstatistik 3 Başlığı" maxlength="15" required />
                            <span asp-validation-for="Statistic3Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Statistic1Title" class="form-label fw-semibold text-primary-light text-sm mb-8">
                                İstatistik 3 Değeri <span class="text-danger-600">*</span>
                            </label>
                            <input asp-for="Statistic3" class="form-control" placeholder="İstatistik 3 Değeri" maxlength="7" required />
                            <span asp-validation-for="Statistic3" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Statistic1Title" class="form-label fw-semibold text-primary-light text-sm mb-8">
                                İstatistik 4 Adı <span class="text-danger-600">*</span>
                            </label>
                            <input asp-for="Statistic4Title" class="form-control" placeholder="İstatistik 4 Başlığı" maxlength="15" required />
                            <span asp-validation-for="Statistic4Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Statistic1Title" class="form-label fw-semibold text-primary-light text-sm mb-8">
                                İstatistik 4 Değeri <span class="text-danger-600">*</span>
                            </label>
                            <input asp-for="Statistic4" class="form-control" placeholder="İstatistik 4 Değeri" maxlength="7" required />
                            <span asp-validation-for="Statistic4" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Güncelle Butonu -->
                    <div class="col-md-6 mt-2">
                        <button type="button" class="btn rounded-pill btn-warning-600 radius-8 d-inline-flex align-items-center btn-sm" onclick="updateBanner()">
                            <span class="material-symbols-outlined me-1" style="font-size: 18px;">update</span>
                            Güncelle
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

@section Scripts {
    <script>
        function previewImage(event) {
            const input = event.target;
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.getElementById('imagePreview');
                    img.src = e.target.result;
                    img.style.display = 'block';
                    document.getElementById('previewContainer').style.display = 'block';
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function updateBanner() {
            const form = document.getElementById("updateBannerForm");
            const theme = document.documentElement.getAttribute("data-theme");

            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            Swal.fire({
                title: "Banner güncellensin mi?",
                text: "Değişiklikleri onaylıyor musunuz?",
                icon: "question",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, güncelle!",
                cancelButtonText: "İptal",
                background: theme === "dark" ? "#1e1e2f" : "#fff",
                color: theme === "dark" ? "#fff" : "#000",
                reverseButtons: true,
                allowOutsideClick: false,
                allowEscapeKey: false,
                allowEnterKey: false,
                didOpen: () => {
                const confirmBtn = Swal.getConfirmButton();
                const cancelBtn = Swal.getCancelButton();

                const addHoverEffect = (btn, color) => {
                    if (!btn) return;
                    btn.style.transition = "all 0.3s ease";
                    btn.addEventListener("mouseenter", () => {
                        btn.style.boxShadow = `0 4px 20px 0 ${color}80`;
                        btn.style.transform = "translateY(-2px)";
                    });
                    btn.addEventListener("mouseleave", () => {
                        btn.style.boxShadow = "none";
                        btn.style.transform = "translateY(0)";
                    });
                };
                addHoverEffect(confirmBtn, "#3085d6");
                addHoverEffect(cancelBtn, "#ff4d4f");
            }
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>
}
