@using CleaningSuppliesSystem.DTO.DTOs.Home.BannerDtos
@model CreateBannerDto

@{
    ViewData["Title"] = "Banner Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="CreateBanner" method="post" enctype="multipart/form-data">
    <div class="container-fluid p-0" style="width: 100vw;">
        <div class="col-md-10">
            <div class="row">

                <!-- 🖊️ Sol: Form Alanı -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Başlık</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Subtitle" class="form-label">Alt Başlık</label>
                        <input asp-for="Subtitle" class="form-control" />
                        <span asp-validation-for="Subtitle" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label">Banner Görseli</label>
                        <input asp-for="ImageFile" type="file" accept="image/*" class="form-control" onchange="previewImage(event)" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <!-- 🔢 İstatistikler -->
                    <div class="mb-3">
                        <label asp-for="Statistic1Title">İstatistik 1 Başlığı</label>
                        <input asp-for="Statistic1Title" class="form-control" />
                        <span asp-validation-for="Statistic1Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Statistic1">İstatistik 1 Değeri</label>
                        <input asp-for="Statistic1" class="form-control" />
                        <span asp-validation-for="Statistic1" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Statistic2Title">İstatistik 2 Başlığı</label>
                        <input asp-for="Statistic2Title" class="form-control" />
                        <span asp-validation-for="Statistic2Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Statistic2">İstatistik 2 Değeri</label>
                        <input asp-for="Statistic2" class="form-control" />
                        <span asp-validation-for="Statistic2" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Statistic3Title">İstatistik 3 Başlığı</label>
                        <input asp-for="Statistic3Title" class="form-control" />
                        <span asp-validation-for="Statistic3Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Statistic3">İstatistik 3 Değeri</label>
                        <input asp-for="Statistic3" class="form-control" />
                        <span asp-validation-for="Statistic3" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Statistic4Title">İstatistik 4 Başlığı</label>
                        <input asp-for="Statistic4Title" class="form-control" />
                        <span asp-validation-for="Statistic4Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Statistic4">İstatistik 4 Değeri</label>
                        <input asp-for="Statistic4" class="form-control" />
                        <span asp-validation-for="Statistic4" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>

                <!-- 🖼️ Sağ: Görsel Önizleme -->
                <div class="col-md-6">
                    <label class="d-block mb-2 fw-bold" style="font-size: 1.2rem;">Fotoğraf Önizlemesi</label>
                    <div style="aspect-ratio: 4 / 3; max-width: 350px; margin: auto; border: 2px dashed #6c757d; border-radius: 10px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                        <img id="imagePreview" src="/images/resim_yok.png" alt="Banner Görseli" style="max-width: 100%; max-height: 100%; object-fit: contain;" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

<script>
    function previewImage(event) {
        const input = event.target;
        const img = document.getElementById('imagePreview');
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                img.src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        } else {
            img.src = "/images/resim_yok.png";
        }
    }
</script>
