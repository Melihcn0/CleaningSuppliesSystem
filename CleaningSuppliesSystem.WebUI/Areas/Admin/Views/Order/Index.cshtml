@model List<ResultOrderDto>

@{
    ViewData["Title"] = "Siparişler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card basic-data-table">
    <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
        <h5 class="card-title mb-0">Gelen Siparişler</h5>
    </div>
    <div class="card-body">
        @Html.AntiForgeryToken()
        <table class="table table-hover mb-0" id="dataTable" style="width: 100%; margin-top: 10px;">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Sipariş No</th>
                    <th>Sipariş Veren</th>
                    <th>Sipariş Tarihi</th>
                    <th>Durum</th>
                    <th>Fatura No</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;

                    var statusClass = item.Status switch
                    {
                        "Teslim Edildi" => "badge text-sm fw-semibold bg-dark-success-gradient px-20 py-9 radius-4 text-white",
                        "Hazırlanıyor" => "badge text-sm fw-semibold bg-dark-primary-gradient px-20 py-9 radius-4 text-white",
                        "İptal Edildi" => "badge text-sm fw-semibold bg-dark-danger-gradient px-20 py-9 radius-4 text-white",
                        "Kargoya Verildi" => "badge text-sm fw-semibold bg-dark-info-gradient px-20 py-9 radius-4 text-white",
                        "Onay Bekleniyor" => "badge text-sm fw-semibold bg-dark-warning-gradient px-20 py-9 radius-4 text-white",
                        "Onaylandı" => "badge text-sm fw-semibold bg-dark-lilac-gradient px-20 py-9 radius-4 text-white",
                        _ => "badge text-sm fw-semibold bg-dark-dark-gradient px-20 py-9 radius-4 text-white"
                    };

                    <tr>
                        <td>@count</td>
                        <td>@item.OrderNumber</td>
                        <td>@($"{item.FirstName} {item.LastName}")</td>
                        <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td><span class="@statusClass">@item.Status</span></td>
                        <td>fatura no</td>
                        <td>
                            <a href="#" class="btn btn-outline-info-600 radius-8 d-inline-flex align-items-center me-2 js-show-order-detail" data-order-id="@item.Id">
                                <span class="material-symbols-outlined me-1">read_more</span> Detay
                            </a>
                            <a href="#" class="btn btn-outline-warning-600 radius-8 d-inline-flex align-items-center me-2 js-show-update-status" data-order-id="@item.Id">
                                <span class="material-symbols-outlined me-1">app_badging</span> S.D Güncelle
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="orderDetailModal" tabindex="-1" aria-labelledby="orderDetailModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content" id="orderDetailModalContent">
        </div>
    </div>
</div>

<div class="modal fade" id="orderUpdateStatusModal" tabindex="-1" aria-labelledby="orderUpdateStatusModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content" id="orderUpdateStatusModalContent">
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showLoadingModal(modal, modalContent) {
            modalContent.html(`
                <div class="modal-header">
                    <h5 class="modal-title">Yükleniyor...</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body text-center p-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                </div>
            `);
            modal.modal('show');
        }

        function showErrorModal(modalContent, errorMessage) {
            modalContent.html(`
                <div class="modal-header">
                    <h5 class="modal-title text-danger">Hata</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">${errorMessage}</div>
                </div>
            `);
        }

        $(document).ready(function () {
            // Sipariş detayını göster
            $('.js-show-order-detail').on('click', function (e) {
                e.preventDefault();

                var orderId = $(this).data('order-id');
                var modal = $('#orderDetailModal');
                var modalContent = $('#orderDetailModalContent');

                showLoadingModal(modal, modalContent);

                $.ajax({
                    url: '/Admin/Order/Details/' + orderId,
                    type: 'GET',
                    success: function (data) {
                        modalContent.html(data);
                    },
                    error: function (xhr) {
                        var errorMessage = "Sipariş detayı yüklenirken bir sorun oluştu.";
                        if (xhr.status === 403) {
                            errorMessage = "Bu siparişi görüntüleme yetkiniz yok.";
                        } else if (xhr.status === 404) {
                            errorMessage = "Belirtilen sipariş bulunamadı.";
                        }
                        showErrorModal(modalContent, errorMessage);
                    }
                });
            });

            // Sipariş durumu güncelleme
            $('.js-show-update-status').on('click', function (e) {
                e.preventDefault();

                var orderId = $(this).data('order-id');
                var modal = $('#orderUpdateStatusModal');
                var modalContent = $('#orderUpdateStatusModalContent');

                showLoadingModal(modal, modalContent);

                $.ajax({
                    url: '/Admin/Order/UpdateStatus/' + orderId,
                    type: 'GET',
                    success: function (data) {
                        modalContent.html(data);
                    },
                    error: function (xhr) {
                        var errorMessage = "Sipariş durumu yüklenirken bir sorun oluştu.";
                        if (xhr.status === 403) {
                            errorMessage = "Bu sipariş durumunu güncelleme yetkiniz yok.";
                        } else if (xhr.status === 404) {
                            errorMessage = "Belirtilen sipariş bulunamadı.";
                        }
                        showErrorModal(modalContent, errorMessage);
                    }
                });
            });
        });
    </script>
}


