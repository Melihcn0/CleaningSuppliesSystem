@model List<AdminResultOrderDto>

@{
    ViewData["Title"] = "İptal Edilen Siparişler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card basic-data-table">
    @Html.AntiForgeryToken()
    <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
        <h5 class="card-title mb-0">İptal edilen siparişler listesi</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any(item => item.Status == "İptal Edildi"))
        {
            <div class="table-responsive" style="overflow-y: hidden;">
                <table class="table table-hover mb-0" id="dataTable" style="width: 100%; margin-top: 10px;">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Sipariş Numarası | Sipariş Veren</th>
                            <th>Sipariş Tarihi | İptal Tarihi</th>
                            <th>İptal Eden</th>
                            <th>Durum</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Status != "İptal Edildi") continue;
                            count++;

                            var statusClass = "badge text-sm fw-semibold bg-dark-danger-gradient px-20 py-9 radius-4 text-white";

                            <tr>
                                <td>@count</td>
                                <td><b><u>#@item.OrderNumber</u></b> - <b><u>@($"{item.FirstName} {item.LastName}")</u></b></td>
                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        <span>
                                            🟢 <b>Sipariş Tarihi:</b>
                                            @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                        </span>
                                        <span>
                                            🟡 <b>İptal Tarihi:</b>
                                            @(item.CanceledDate != null
                                                ? item.CanceledDate.Value.ToString("dd.MM.yyyy HH:mm")
                                                : "Henüz iptal edilmedi")
                                        </span>
                                    </div>
                                </td>
                                <td>@item.OrderNote</td>
                                <td><span class="@statusClass">@item.Status</span></td>
                                <td>
                                    <a href="#" class="btn rounded-pill btn-lilac-600 radius-8 d-inline-flex align-items-center me-2 js-show-readonly-order" data-order-id="@item.Id">
                                        <span class="material-symbols-outlined me-1" style="font-size: 18px;">read_more</span>
                                        Daha Fazla...
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="modal fade" id="orderReadOnlyModal" tabindex="-1" aria-labelledby="orderReadOnlyModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
                <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content" id="orderReadOnlyModalContent">
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                    <i class="fas fa-shopping-cart fa-3x mb-3 opacity-25"></i>
                    <h5>Hiç sipariş bulunamadı</h5>
                    <p>Henüz iptal edilen bir siparişiniz yok.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(function(){
            let currentOrderId = null;
            const detailModalEl = $('#orderReadOnlyModal');
            const detailModalContent = $('#orderReadOnlyModalContent');
            const bsDetailModal = new bootstrap.Modal(detailModalEl[0], {backdrop:'static', keyboard:false});
            const getToken = () => $('input[name="__RequestVerificationToken"]').val();

            function showLoading(content){
                content.html(`
                    <div class="modal-header">
                        <h5 class="modal-title">Yükleniyor...</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body text-center p-5">
                        <div class="spinner-border text-primary" role="status"></div>
                    </div>
                `);
            }

            function showError(content, message){
                content.html(`
                    <div class="modal-header">
                        <h5 class="modal-title text-danger">Hata</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body"><div class="alert alert-danger">${message}</div></div>
                `);
            }

            function loadOrderDetail(orderId){
                showLoading(detailModalContent);
                bsDetailModal.show();

                $.get('/Admin/Order/ReadOnlyDetails/' + orderId)
                .done(function(data){
                    if($(data).find('tbody tr').length === 0) location.reload();
                    else detailModalContent.html(data);
                    initReadOnlyOrderDataTable();
                })
                .fail(function(xhr){
                    let msg = xhr.status===403 ? "Bu siparişi görüntüleme yetkiniz yok." :
                              xhr.status===404 ? "Sipariş bulunamadı." : "Sipariş detayı yüklenemedi.";
                    showError(detailModalContent, msg);
                });
            }

            $(document).on('click', '.js-show-readonly-order', function(e){
                e.preventDefault();
                currentOrderId = $(this).data('order-id');
                loadOrderDetail(currentOrderId);
            });
        });
    </script>
}
