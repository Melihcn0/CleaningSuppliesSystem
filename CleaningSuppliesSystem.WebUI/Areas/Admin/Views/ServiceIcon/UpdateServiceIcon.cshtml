@model UpdateServiceIconDto
@{
    ViewData["Title"] = "Hizmet İkonu Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form id="updateServiceIconForm" method="post">
    <input type="hidden" asp-for="Id" />
    <label>Icon Adı</label>
    <input type="text" asp-for="IconName" class="form-control" />
    <span asp-validation-for="IconName" class="text-danger"></span>
    <br />
    <label>Icon Url</label>
    <input type="text" asp-for="IconUrl" class="form-control" />
    <span asp-validation-for="IconUrl" class="text-danger"></span>
    <br />
    <button class="btn btn-warning-600">Güncelle</button>
</form>

@section Scripts {

    <script>
        function updateFinance() {
            const form = document.getElementById("updateServiceIconForm");
            const theme = document.documentElement.getAttribute("data-theme");
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            Swal.fire({
                title: "Değişiklikler kaydedilsin mi?",
                text: "İşlemi onaylıyor musunuz?",
                icon: "question",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, kaydet!",
                cancelButtonText: "İptal",
                background: theme === "dark" ? "#1e1e2f" : "#fff",
                color: theme === "dark" ? "#fff" : "#000",
                allowOutsideClick: false,
                allowEscapeKey: false,
                allowEnterKey: false
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }

    </script>
}
