@model AdminProfileViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="dashboard-main-body">
    <div class="row gy-4">
        <!-- Sol Panel -->
        <div class="col-lg-4">
            <div class="shadow-4 border radius-8 overflow-hidden h-100">
            <div class="user-grid-card position-relative border radius-16 overflow-hidden bg-base h-100">
                <img src="~/images/image6.png" alt="" class="w-100 object-fit-cover">
                <div class="ms-16 mb-24 me-16 mt--100">
                    <div class="text-center border border-top-0 border-start-0 border-end-0">
                        <img src="~/images/image7.png" alt=""
                             class="border br-white border-width-2-px w-160-px h160-px rounded-circle object-fit-cover">
                        <h6 class="mb-0 mt-16">
                            @(!string.IsNullOrWhiteSpace(Model.AdminProfile.FirstName) || !string.IsNullOrWhiteSpace(Model.AdminProfile.LastName)
                                ? $"{Model.AdminProfile.FirstName} {Model.AdminProfile.LastName}" : "-")
                        </h6>
                        <span class="text-secondary-light mb-16">
                            @(Model.AdminProfile.Email ?? "-")
                        </span>
                    </div>

                    <div class="mt-24">
                        <h6 class="text-xl mb-16">Kişisel Bilgiler</h6>
                        <ul>
                            <li class="d-flex align-items-center gap-1 mb-12">
                                <span class="w-30 text-md fw-semibold text-primary-light">Ad Soyad</span>
                                <span class="w-70 text-secondary-light fw-medium">
                                    : @(!string.IsNullOrWhiteSpace(Model.AdminProfile.FirstName) || !string.IsNullOrWhiteSpace(Model.AdminProfile.LastName)
                                      ? $"{Model.AdminProfile.FirstName} {Model.AdminProfile.LastName}" : "-")
                                </span>
                            </li>
                            <li class="d-flex align-items-center gap-1 mb-12">
                                <span class="w-30 text-md fw-semibold text-primary-light">Kullanıcı Adı</span>
                                <span class="w-70 text-secondary-light fw-medium">: @(Model.AdminProfile.UserName ?? "-")</span>
                            </li>
                            <li class="d-flex align-items-center gap-1 mb-12">
                                <span class="w-30 text-md fw-semibold text-primary-light">TC Kimlik No</span>
                                <span class="w-70 text-secondary-light fw-medium">: @(Model.AdminProfile.NationalId ?? "-")</span>
                            </li>
                            <li class="d-flex align-items-center gap-1 mb-12">
                                <span class="w-30 text-md fw-semibold text-primary-light">Telefon</span>
                                <span class="w-70 text-secondary-light fw-medium">: @(Model.AdminProfile.PhoneNumber ?? "-")</span>
                            </li>
                            <li class="d-flex align-items-center gap-1 mb-12">
                                <span class="w-30 text-md fw-semibold text-primary-light">Son Çıkış</span>
                                <span class="w-70 text-secondary-light fw-medium">
                                    : @(Model.AdminProfile.LastLogoutAt != DateTime.MinValue
                                      ? Model.AdminProfile.LastLogoutAt.ToString("dd.MM.yyyy HH:mm")
                                      : "-")
                                </span>
                            </li>
                            @if (Model.AdminProfile.CompanyBank != null)
                            {
                                <li class="d-flex align-items-center gap-1 mb-12">
                                    <span class="w-30 text-md fw-semibold text-primary-light">Banka Adı</span>
                                    <span class="w-70 text-secondary-light fw-medium">: @(Model.AdminProfile.CompanyBank.BankName ?? "-")</span>
                                </li>
                                <li class="d-flex align-items-center gap-1 mb-12">
                                    <span class="w-30 text-md fw-semibold text-primary-light">Hesap Sahibi</span>
                                    <span class="w-70 text-secondary-light fw-medium">: @(Model.AdminProfile.CompanyBank.AccountHolder ?? "-")</span>
                                </li>
                                <li class="d-flex align-items-center gap-1 mb-12">
                                    <span class="w-30 text-md fw-semibold text-primary-light">IBAN</span>
                                    <span id="iban-display" class="w-70 text-secondary-light fw-medium">: @(Model.AdminProfile.CompanyBank?.IBAN ?? "-")</span>
                                </li>
                            }
                            @if (Model.AdminProfile.CompanyAddress != null)
                            {
                                <li class="d-flex align-items-center gap-1 mb-12">
                                    <span class="w-30 text-md fw-semibold text-primary-light">Şirket Adı</span>
                                    <span class="w-70 text-secondary-light fw-medium">: @Model.AdminProfile.CompanyAddress.CompanyName</span>
                                </li>
                                <li class="d-flex align-items-center gap-1 mb-12">
                                    <span class="w-30 text-md fw-semibold text-primary-light">Vergi Dairesi</span>
                                    <span class="w-70 text-secondary-light fw-medium">: @Model.AdminProfile.CompanyAddress.TaxOffice</span>
                                </li>
                                <li class="d-flex align-items-center gap-1 mb-12">
                                    <span class="w-30 text-md fw-semibold text-primary-light">Vergi No</span>
                                    <span class="w-70 text-secondary-light fw-medium">: @Model.AdminProfile.CompanyAddress.TaxNumber</span>
                                </li>
                                <li class="d-flex align-items-center gap-1 mb-12">
                                    <span class="w-30 text-md fw-semibold text-primary-light">Şehir / İlçe</span>
                                    <span class="w-70 text-secondary-light fw-medium">: @Model.AdminProfile.CompanyAddress.CityName / @Model.AdminProfile.CompanyAddress.DistrictName</span>
                                </li>
                                <li class="d-flex align-items-center gap-1 mb-12">
                                    <span class="w-30 text-md fw-semibold text-primary-light">Açık Adres</span>
                                    <span class="w-70 text-secondary-light fw-medium">: @Model.AdminProfile.CompanyAddress.Address</span>
                                </li>
                            }


                        </ul>
                    </div>
                </div>
            </div>
        </div>
        </div>

        <!-- Sağ Panel -->
        <div class="col-lg-8">
            <div class="shadow-4 border radius-8">
                <div class="card h-100">
                    <div class="card-body p-24">
                    <!-- Tab Nav -->
                    <ul class="nav border-gradient-tab nav-pills mb-20 d-inline-flex" id="pills-tab" role="tablist">
                        @* Bilgi Tab *@
                        <li class="nav-item" role="presentation">
                            <button class="nav-link d-flex align-items-center px-24 @(ViewBag.ActiveTab?.ToString() == "pills-blank" ? "active" : "")"
                                    id="pills-blank-tab" data-bs-toggle="pill"
                                    data-bs-target="#pills-blank" type="button" role="tab"
                                    aria-controls="pills-blank"
                                    aria-selected="@(ViewBag.ActiveTab?.ToString() == "pills-blank" ? "true" : "false")">
                                <iconify-icon icon="solar:info-circle-linear" class="text-xl me-1"></iconify-icon>
                                Bilgi
                            </button>
                        </li>
                        @* Profilim Tab *@
                        <li class="nav-item" role="presentation">
                            <button class="nav-link d-flex align-items-center px-24 @(ViewBag.ActiveTab?.ToString() == "pills-edit-profile" ? "active" : "")"
                                    id="pills-edit-profile-tab" data-bs-toggle="pill"
                                    data-bs-target="#pills-edit-profile" type="button" role="tab"
                                    aria-controls="pills-edit-profile"
                                    aria-selected="@(ViewBag.ActiveTab?.ToString() == "pills-edit-profile" ? "true" : "false")">
                                <iconify-icon icon="iconamoon:profile" class="text-xl me-1"></iconify-icon>
                                Profilim
                            </button>
                        </li>
                        @* Adresim Tab *@
                        <li class="nav-item" role="presentation">
                            <button class="nav-link d-flex align-items-center px-24 @(ViewBag.ActiveTab?.ToString() == "pills-edit-address" ? "active" : "")"
                                    id="pills-edit-address-tab" data-bs-toggle="pill"
                                    data-bs-target="#pills-edit-address" type="button" role="tab"
                                    aria-controls="pills-edit-address"
                                    aria-selected="@(ViewBag.ActiveTab?.ToString() == "pills-edit-address" ? "true" : "false")">
                                <iconify-icon icon="mdi:map-marker-outline" class="text-xl me-1"></iconify-icon>
                                Adresim
                            </button>
                        </li>
                        @* Hesap Bilgisi Tab *@
                        <li class="nav-item" role="presentation">
                            <button class="nav-link d-flex align-items-center px-24 @(ViewBag.ActiveTab?.ToString() == "pills-edit-bank" ? "active" : "")"
                                    id="pills-edit-bank-tab" data-bs-toggle="pill"
                                    data-bs-target="#pills-edit-bank" type="button" role="tab"
                                    aria-controls="pills-edit-bank"
                                    aria-selected="@(ViewBag.ActiveTab?.ToString() == "pills-edit-bank" ? "true" : "false")">
                                <iconify-icon icon="mdi:bank" class="text-xl me-1"></iconify-icon>
                                Banka Bilgim
                            </button>
                        </li>
                    </ul>

                    <!-- Tab Content -->
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade @(ViewBag.ActiveTab == "pills-edit-profile" ? "show active" : "")"
                             id="pills-edit-profile" role="tabpanel"
                             aria-labelledby="pills-edit-profile-tab">
                            @Html.Partial("_EditProfilePartial", Model.UpdateAdminProfile)
                        </div>

                        <div class="tab-pane fade @(ViewBag.ActiveTab == "pills-edit-address" ? "show active" : "")"
                             id="pills-edit-address" role="tabpanel"
                             aria-labelledby="pills-edit-address-tab">
                            @Html.Partial("_EditAddressPartial", Model.UpdateCompanyAddress)
                        </div>

                        <div class="tab-pane fade @(ViewBag.ActiveTab == "pills-edit-bank" ? "show active" : "")"
                             id="pills-edit-bank" role="tabpanel"
                             aria-labelledby="pills-edit-bank-tab">
                            @Html.Partial("_EditBankPartial", Model.UpdateCompanyBank)
                        </div>

                        <div class="tab-pane fade @(ViewBag.ActiveTab == "pills-blank" ? "show active" : "")"
                             id="pills-blank" role="tabpanel"
                             aria-labelledby="pills-blank-tab">
                            <div class="p-16 bg-transparent radius-8 border-start-width-3-px shadow-4">
                                <h6 class="text-primary-light text-md mb-8">Yetkili Bilgilendirmesi</h6>
                                <ul class="list-unstyled mb-0 space-y-2">
                                    <li>Şirket adresi, iletişim ve vergi bilgilerini eksiksiz girmeniz gerekmektedir.</li>
                                    <li>Bu bilgiler sipariş süreçlerinde ve fatura işlemlerinde kullanılacaktır.</li>
                                    <li>Eksik veya hatalı bilgi girilirse sistem işlemi tamamlamaz.</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
            document.getElementById('PhoneNumber').addEventListener('input', function() {
                let value = this.value.replace(/\D/g, '');

                if(value === '') {
                    this.value = '';
                    return;
                }

                if(value.startsWith('0')) value = '90' + value.slice(1);
                else if(!value.startsWith('90')) value = '90' + value;

                let formatted = '+' +
                    value.slice(0,2) + ' ' +
                    (value.length>2 ? value.slice(2,5)+' ' : '') +
                    (value.length>5 ? value.slice(5,8)+' ' : '') +
                    (value.length>8 ? value.slice(8,10)+' ' : '') +
                    (value.length>10 ? value.slice(10,12) : '');

                this.value = formatted.trim();
            });

        function updateAdminProfile() {
            const form = document.getElementById("updateAdminProfileForm");
            const theme = document.documentElement.getAttribute("data-theme");

            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            Swal.fire({
                title: "Profil Bilgileri",
                text: "Değişiklikler kaydedilsin mi?",
                icon: "question",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, kaydet!",
                cancelButtonText: "İptal",
                background: theme === "dark" ? "#1e1e2f" : "#fff",
                color: theme === "dark" ? "#fff" : "#000",
                allowOutsideClick: false,
                allowEscapeKey: false,
                allowEnterKey: false,
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }

        function updateCompanyAddress() {
    const form = document.getElementById("updateCompanyAddressForm");
    const theme = document.documentElement.getAttribute("data-theme");

    if (!form.checkValidity()) {
        form.reportValidity();
        return;
    }

    Swal.fire({
        title: "Adres Bilgileri",
        text: "Değişiklikler kaydedilsin mi?",
        icon: "question",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Evet, kaydet!",
        cancelButtonText: "İptal",
        background: theme === "dark" ? "#1e1e2f" : "#fff",
        color: theme === "dark" ? "#fff" : "#000",
        allowOutsideClick: false,
        allowEscapeKey: false,
        allowEnterKey: false,
        reverseButtons: true
    }).then((result) => {
        if (result.isConfirmed) {
            form.submit();
        }
    });
}

        // IBAN input formatlama
        function formatIBAN(input) {
            // Önce boşlukları kaldır ve TR ile başlat
            let value = input.value.replace(/\s/g, '').toUpperCase();
            if (!value.startsWith('TR')) value = 'TR' + value.replace(/^TR/i, '');

            // TR dışındaki kısmı sadece rakam yap ve maksimum 26 rakam
            let prefix = value.substring(0, 2);
            let rest = value.substring(2).replace(/[^0-9]/g, '');
            if (rest.length > 26) rest = rest.substring(0, 26);

            value = prefix + rest;

            // 4’lü gruplara ayır (kullanıcıya gösterilen)
            let formatted = value.replace(/(.{4})/g, '$1 ').trim();

            // Data attribute ile ham değeri sakla
            input.dataset.rawValue = value; // backend'e gönderilecek ham değer
            input.value = formatted; // kullanıcıya gösterilen
        }

        // Sayfa yüklendiğinde DB’den gelen değeri boşluklu formatla
        window.addEventListener('DOMContentLoaded', () => {
            const ibanInput = document.getElementById('ibanInput');
            if (ibanInput && ibanInput.value) {
                formatIBAN(ibanInput);
            }
        });

        // Form submit edilirken input değerini ham değere çevir
        function updateCompanyBank() {
        const form = document.getElementById("updateCompanyBankForm");
        const theme = document.documentElement.getAttribute("data-theme");

        const ibanInput = form.querySelector('[name="IBAN"]');
        ibanInput.value = ibanInput.dataset.rawValue || ibanInput.value; // ham değeri gönder

        if (!form.checkValidity()) {
            form.reportValidity();
            return;
        }

        Swal.fire({
            title: "Banka Bilgileri",
            text: "Değişiklikler kaydedilsin mi?",
            icon: "question",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, kaydet!",
            cancelButtonText: "İptal",
            background: theme === "dark" ? "#1e1e2f" : "#fff",
            color: theme === "dark" ? "#fff" : "#000",
            allowOutsideClick: false,
            allowEscapeKey: false,
            allowEnterKey: false,
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) form.submit();
        });
        }

            document.addEventListener("DOMContentLoaded", function() {
        const el = document.getElementById("iban-display");

        if(el) {
            // Razor'dan gelen text'i al ve başındaki ": " kısmını çıkar
            let rawIban = el.textContent.trim().replace(/^:\s*/, '');

            if(rawIban !== "-") {
                // Boşlukları kaldır ve 4'er haneli olarak ayır
                rawIban = rawIban.replace(/\s+/g,'').match(/.{1,4}/g).join(' ');
            }

            // Tekrar elemente yaz, başına ":" ekle
            el.textContent = `: ${rawIban}`;
        }
    });

    </script>
}