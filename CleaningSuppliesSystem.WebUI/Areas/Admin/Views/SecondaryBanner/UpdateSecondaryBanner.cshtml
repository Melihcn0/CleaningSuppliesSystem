@model UpdateSecondaryBannerDto

@{
    ViewData["Title"] = "İkincil Banner Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form id="updateSecondaryBannerForm" method="post" asp-action="UpdateSecondaryBanner" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl1" />
    <input type="hidden" asp-for="ImageUrl2" />
    <input type="hidden" asp-for="ImageUrl3" />

    <div class="row gx-3 gy-4">
        <!-- Banner 1 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header text-center">
                    <h5>Banner 1</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="mb-3 text-center d-flex align-items-center justify-content-center" style="gap:10px; flex-wrap: nowrap;">
                        <div>
                            <label>Mevcut Görsel</label><br />
                            @if (!string.IsNullOrEmpty(Model.ImageUrl1))
                            {
                                <img src="@Model.ImageUrl1" alt="Image 1" class="img-thumbnail" style="max-height: 120px;" />
                            }
                            else
                            {
                                <p class="text-danger">Mevcut görsel yok</p>
                            }
                        </div>

                        <div style="font-size: 24px; user-select:none; color:#555;">&#8594;</div>

                        <div id="previewContainer1" style="display:none;">
                            <label>Yeni Seçilen Görsel:</label><br />
                            <img id="imagePreview1" src="#" alt="Yeni Görsel 1" class="img-thumbnail" style="max-height: 120px; display:none;" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <input type="file" name="ImageFile1" accept="image/*" class="d-none" id="basic-upload-1" onchange="previewImage(event, 1)" />
                        <label for="basic-upload-1" class="border border-primary-600 fw-medium text-primary-600 px-16 py-12 radius-12 d-inline-flex align-items-center gap-2 bg-hover-primary-50" style="cursor:pointer;">
                            <iconify-icon icon="solar:upload-linear" class="text-xl"></iconify-icon>
                            Yeni Görsel Yükle
                        </label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Title1" class="form-label">Başlık 1</label>
                        <input asp-for="Title1" class="form-control" />
                        <span asp-validation-for="Title1" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description1" class="form-label">Açıklama 1</label>
                        <input asp-for="Description1" class="form-control" />
                        <span asp-validation-for="Description1" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ButtonTitle1" class="form-label">Buton Başlığı 1</label>
                        <input asp-for="ButtonTitle1" class="form-control" />
                        <span asp-validation-for="ButtonTitle1" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Banner 2 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header text-center">
                    <h5>Banner 2</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="mb-3 text-center d-flex align-items-center justify-content-center" style="gap:10px; flex-wrap: nowrap;">
                        <div>
                            <label>Mevcut Görsel</label><br />
                            @if (!string.IsNullOrEmpty(Model.ImageUrl2))
                            {
                                <img src="@Model.ImageUrl2" alt="Image 2" class="img-thumbnail" style="max-height: 120px;" />
                            }
                            else
                            {
                                <p class="text-danger">Mevcut görsel yok</p>
                            }
                        </div>

                        <div style="font-size: 24px; user-select:none; color:#555;">&#8594;</div>

                        <div id="previewContainer2" style="display:none;">
                            <label>Yeni Seçilen Görsel:</label><br />
                            <img id="imagePreview2" src="#" alt="Yeni Görsel 2" class="img-thumbnail" style="max-height: 120px; display:none;" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <input type="file" name="ImageFile2" accept="image/*" class="d-none" id="basic-upload-2" onchange="previewImage(event, 2)" />
                        <label for="basic-upload-2" class="border border-primary-600 fw-medium text-primary-600 px-16 py-12 radius-12 d-inline-flex align-items-center gap-2 bg-hover-primary-50" style="cursor:pointer;">
                            <iconify-icon icon="solar:upload-linear" class="text-xl"></iconify-icon>
                            Yeni Görsel Yükle
                        </label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Title2" class="form-label">Başlık 2</label>
                        <input asp-for="Title2" class="form-control" />
                        <span asp-validation-for="Title2" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description2" class="form-label">Açıklama 2</label>
                        <input asp-for="Description2" class="form-control" />
                        <span asp-validation-for="Description2" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ButtonTitle2" class="form-label">Buton Başlığı 2</label>
                        <input asp-for="ButtonTitle2" class="form-control" />
                        <span asp-validation-for="ButtonTitle2" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Banner 3 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header text-center">
                    <h5>Banner 3</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="mb-3 text-center d-flex align-items-center justify-content-center" style="gap:10px; flex-wrap: nowrap;">
                        <div>
                            <label>Mevcut Görsel</label><br />
                            @if (!string.IsNullOrEmpty(Model.ImageUrl3))
                            {
                                <img src="@Model.ImageUrl3" alt="Image 3" class="img-thumbnail" style="max-height: 120px;" />
                            }
                            else
                            {
                                <p class="text-danger">Mevcut görsel yok</p>
                            }
                        </div>

                        <div style="font-size: 24px; user-select:none; color:#555;">&#8594;</div>

                        <div id="previewContainer3" style="display:none;">
                            <label>Yeni Seçilen Görsel:</label><br />
                            <img id="imagePreview3" src="#" alt="Yeni Görsel 3" class="img-thumbnail" style="max-height: 120px; display:none;" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <input type="file" name="ImageFile3" accept="image/*" class="d-none" id="basic-upload-3" onchange="previewImage(event, 3)" />
                        <label for="basic-upload-3" class="border border-primary-600 fw-medium text-primary-600 px-16 py-12 radius-12 d-inline-flex align-items-center gap-2 bg-hover-primary-50" style="cursor:pointer;">
                            <iconify-icon icon="solar:upload-linear" class="text-xl"></iconify-icon>
                            Yeni Görsel Yükle
                        </label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Title3" class="form-label">Başlık 3</label>
                        <input asp-for="Title3" class="form-control" />
                        <span asp-validation-for="Title3" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description3" class="form-label">Açıklama 3</label>
                        <input asp-for="Description3" class="form-control" />
                        <span asp-validation-for="Description3" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ButtonTitle3" class="form-label">Buton Başlığı 3</label>
                        <input asp-for="ButtonTitle3" class="form-control" />
                        <span asp-validation-for="ButtonTitle3" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
        <button type="button" class="btn btn-warning-600" onclick="submitSecondaryBanner()">Güncelle</button>
</form>

@section Scripts {
    <script>
        function previewImage(event, index) {
            const input = event.target;
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = document.getElementById(`imagePreview${index}`);
                    img.src = e.target.result;
                    img.style.display = 'block';
                    document.getElementById(`previewContainer${index}`).style.display = 'block';
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function submitSecondaryBanner() {
            const form = document.getElementById("updateSecondaryBannerForm");
            const theme = document.documentElement.getAttribute("data-theme");

            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            Swal.fire({
                title: "İkincil Banner güncellensin mi?",
                text: "Değişiklikleri onaylıyor musunuz?",
                icon: "question",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, güncelle!",
                cancelButtonText: "İptal",
                background: theme === "dark" ? "#1e1e2f" : "#fff",
                color: theme === "dark" ? "#fff" : "#000"
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>
}
