@model LocationCityViewModel
@{
    ViewData["Title"] = "Şehir Lokasyonları Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    ViewData["DeleteFunction"] = "deletedCity";
    ViewData["DeleteUrlPrefix"] = "/Admin/LocationCity/SoftDeletedCity/";
    int count = 0;
}

<div class="card basic-data-table">
    @Html.AntiForgeryToken()
    <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
        <h5 class="card-title mb-0">Şehir Lokasyonları Listesi</h5>
        <div class="d-flex flex-wrap align-items-center gap-2 ms-auto mt-2 mt-md-0">
            <a asp-action="CreateCity" asp-controller="LocationCity" asp-area="Admin" class="btn rounded-pill btn-info-100 text-info-600 radius-8 d-inline-flex align-items-center">
                <span class="material-symbols-outlined me-1" style="font-size: 18px;">add</span> Yeni Şehir Ekle
            </a>
            <a asp-action="DeletedCities" asp-controller="LocationCity" asp-area="Admin" class="btn btn-danger-600 radius-8 d-inline-flex align-items-center">
                <span class="material-symbols-outlined me-1" style="font-size: 18px;">delete</span> Çöp Kutusu
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive" style="overflow-y: hidden;">
            <table class="table table-hover mb-0" id="dataTable" style="width: 100%; margin-top: 10px;">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Şehir Adı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CityViewList)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.CityName</td>
                            <td>
                                @item.CreatedDate.ToString("dd.MM.yyyy HH:mm") <br />
                                @item.CreatedDate.ToString("dd MMMM yyyy dddd")
                            </td>
                            <td>
                                <div class="d-flex flex-nowrap gap-2">
                                    <button class="btn rounded-pill btn-danger-100 text-danger-600 radius-8 d-inline-flex align-items-center btn-sm action-btn delete-btn"
                                            data-id="@item.Id">
                                        <span class="material-symbols-outlined me-1">delete</span> Sil
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>