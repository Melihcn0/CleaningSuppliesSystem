@model CategoryViewModel
@{
    ViewData["Title"] = "Silinen Kategoriler Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    ViewData["PermanentDeleteUrl"] = "~/Admin/Category/PermanentDeleteCategory";
    ViewData["PermanentDeleteConfirmTitle"] = "Bu öğeyi kalıcı olarak silmek istediğinize emin misiniz?";

    ViewData["UndoSoftDeleteUrl"] = "~/Admin/Category/UndoSoftDeleteMultiple";
    ViewData["UndoSoftDeleteConfirmTitle"] = "Seçilen kategorileri geri almak istediğinize emin misiniz?";
    
    ViewData["PermanentDeleteMultipleUrl"] = "~/Admin/Category/PermanentDeleteMultiple";
    ViewData["PermanentDeleteConfirmMultipleTitle"] = "Bu öğeyi kalıcı olarak silmek istediğinize emin misiniz?";
    
    int count = 0;
}

<div class="card basic-data-table">
    <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
        <h5 class="card-title mb-0">Silinen Kategoriler Listesi</h5>
        <div class="d-flex align-items-center gap-2 ms-auto">
            <button id="undosoftdeleteSelectedBtn" class="btn btn-outline-success-600 radius-8 d-inline-flex align-items-center me-2" disabled>
                <span class="material-symbols-outlined me-1">delete</span> Seçilenleri Geri Al
            </button>
            <button id="permanentdeleteSelectedBtn" class="btn btn-outline-danger-600 radius-8 d-inline-flex align-items-center me-2" disabled>
                <span class="material-symbols-outlined me-1">delete</span> Seçilenleri Sil
            </button>
        </div>
    </div>
    <div class="card-body">
        @Html.AntiForgeryToken()
        <table class="table table-hover mb-0" id="dataTable" style="width: 100%; margin-top: 10px;">
            <thead class="table-light">
                <tr>
                    <th>
                        <input type="checkbox" id="selectAll" class="form-check-input" />
                    </th>
                    <th>Ürün Grubu / Kategori Fotoğrafı</th>
                    <th>Üst Kategori Adı</th>
                    <th>Alt Kategori Adı</th>
                    <th>Kategori Adı</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Son Güncelleme Tarihi</th>
                    <th>Silinme Tarihi</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CategoryViewList)
                {
                    count++;
                    <tr>
                        <td>
                            <label class="d-flex align-items-center mb-0" style="cursor:pointer;">
                                <input type="checkbox" class="form-check-input row-checkbox me-3" data-id="@item.Id" />
                                @count
                            </label>
                        </td>
                        <td>
                            <img src="@Url.Content(item.ImageUrl)" style="width:75px; height:75px;" />
                        </td>
                        <td>@item.TopCategoryName</td>
                        <td>@item.SubCategoryName</td>
                        <td>@item.Name</td>
                        <td>
                            @item.CreatedDate.ToString("dd.MM.yyyy HH:mm") <br />
                            @item.CreatedDate.ToString("dd MMMM yyyy dddd")
                        </td>
                        <td>
                            @(item.UpdatedDate.HasValue
                                ? Html.Raw(item.UpdatedDate.Value.ToString("dd.MM.yyyy HH:mm") + "<br />" + item.UpdatedDate.Value.ToString("dd MMMM yyyy dddd"))
                                : "Henüz güncelleme yapılmadı")
                        </td>
                        <td>
                            @item.DeletedDate?.ToString("dd.MM.yyyy HH:mm") <br />
                            @item.DeletedDate?.ToString("dd MMMM yyyy dddd")
                        </td>
                        <td>
                            <form asp-action="UndoSoftDeletedCategory" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-success-600 radius-8 d-inline-flex align-items-center me-2 action-btn">
                                    <span class="material-symbols-outlined">undo</span> Geri al
                                </button>
                            </form>
                            <button type="button"
                                    class="btn btn-outline-danger-600 radius-8 d-inline-flex align-items-center me-2 action-btn permanent-delete-btn"
                                    data-id="@item.Id">
                                <span class="material-symbols-outlined me-1">delete</span> Sil
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        const selectAll = document.getElementById('selectAll');
        const checkboxes = document.querySelectorAll('.row-checkbox');

        if (selectAll) {
            selectAll.addEventListener('change', function () {
                checkboxes.forEach(cb => cb.checked = this.checked);
                toggleMultiDeleteUI();
            });
        }

        document.addEventListener('change', e => {
            if (e.target.classList.contains('row-checkbox')) {
                toggleMultiDeleteUI();
            }
        });

        function toggleMultiDeleteUI() {
            const selectedCount = document.querySelectorAll('.row-checkbox:checked').length;

            const undoBtn = document.getElementById('undosoftdeleteSelectedBtn');
            const permanentDeleteBtn = document.getElementById('permanentdeleteSelectedBtn');

            if (undoBtn) undoBtn.disabled = selectedCount === 0;
            if (permanentDeleteBtn) permanentDeleteBtn.disabled = selectedCount === 0;

            // Tekli action butonları (satırdaki)
            document.querySelectorAll('.action-btn').forEach(btn => {
                btn.disabled = selectedCount > 0;
                btn.style.pointerEvents = selectedCount > 0 ? 'none' : 'auto';
                btn.style.opacity = selectedCount > 0 ? '0.5' : '1';
            });
        }
    </script>
}
