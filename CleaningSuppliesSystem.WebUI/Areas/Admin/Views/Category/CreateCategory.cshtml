@model CreateCategoryDto
@{
    ViewData["Title"] = "Kategori Oluşturma Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://unpkg.com/htmx.org@1.9.6"></script>

<form asp-action="CreateCategory" method="post" enctype="multipart/form-data" style="margin: 0; padding: 0;">
    @Html.AntiForgeryToken()
    <div class="container-fluid p-0" style="width: 100vw;">
            <div class="col-md-10">
                <div class="row">
                    <!-- Form Alanı -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="TopCategoryId">Üst Kategori</label>
                            <select asp-for="TopCategoryId"
                                    id="TopCategoryId"
                                    asp-items="ViewBag.topCategories"
                                    class="form-control"
                                    hx-get="@Url.Action("GetSubCategoriesByTopCategory", "Category")"
                                    hx-target="#SubCategoryId"
                                    hx-trigger="change"
                                    hx-include="#TopCategoryId"
                                    required>
                                <option value="" selected disabled>Üst Kategori Seçin</option>
                            </select>
                            <span asp-validation-for="TopCategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="SubCategoryId">Alt Kategori</label>
                            <select asp-for="SubCategoryId"
                                    id="SubCategoryId"
                                    class="form-control"
                                    asp-items="ViewBag.subCategories"
                                    hx-swap="outerHTML"
                                    required>
                                <option value="" selected disabled>Alt kategori seçin</option>
                            </select>
                            <span asp-validation-for="SubCategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Name">Kategori Adı</label>
                            <input asp-for="Name" class="form-control" maxlength="50" required/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                    <div class="mb-3">
                        <label for="basic-upload"
                               class="border border-primary-600 fw-medium text-primary-600 px-16 py-12 radius-12 d-inline-flex align-items-center gap-2 bg-hover-primary-50">
                            <iconify-icon icon="solar:upload-linear" class="text-xl"></iconify-icon>
                            Görsel Yükle
                            <input asp-for="ImageFile" type="file" accept="image/*" class="visually-hidden" id="basic-upload" onchange="previewImage(event)" required />
                        </label>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <button class="btn rounded-pill btn-primary-600 radius-8 d-inline-flex align-items-center btn-sm">
                        <span class="material-symbols-outlined me-1 d-inline-flex align-items-center" style="font-size: 18px;">add</span>
                        Ekle
                    </button>
                    </div>

                    <!-- Görsel Önizleme Alanı -->
                    <div class="col-md-6">
                        <label class="d-block text-center mb-2 fw-bold" style="font-size: 1.2rem;">Fotoğraf Önizlemesi</label>
                        <div style="aspect-ratio: 4 / 3; max-width: 350px; margin: auto; border: 2px dashed #6c757d; border-radius: 10px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                            <img id="imagePreview"
                                 src="/images/resim_yok.png"
                                 alt="Kategori Görseli"
                                 style="max-width: 100%; max-height: 100%; object-fit: contain;" />
                        </div>
                    </div>
                </div>
        </div>
    </div>
</form>

<script>
    function previewImage(event) {
        const input = event.target;
        const img = document.getElementById('imagePreview');
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                img.src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        } else {
            img.src = "/images/resim_yok.png";
        }
    }
</script>
