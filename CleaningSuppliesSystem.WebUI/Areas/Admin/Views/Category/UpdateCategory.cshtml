@model UpdateCategoryDto

@{
    ViewData["Title"] = "Kategori Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://unpkg.com/htmx.org@1.9.6"></script>

<form id="updateCategoryForm" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl" />
    <input type="hidden" name="existingImageUrl" value="@ViewBag.ExistingImageUrl" />

    <!-- Üst Kategori -->
    <div class="form-group">
        <label asp-for="TopCategoryId" class="form-label fw-semibold text-primary-light text-sm mb-8">
            Üst Kategori Seçin <span class="text-danger-600">*</span>
        </label>
        <select asp-for="TopCategoryId"
                id="TopCategoryId"
                asp-items="ViewBag.topCategories"
                class="form-control"
                hx-get="@Url.Action("GetSubCategoriesByTopCategory", "Category")"
                hx-target="#SubCategoryId"
                hx-trigger="change"
                hx-include="#TopCategoryId"
                required>
            <option value="" disabled selected>Üst Kategori Seçin</option>
        </select>
        <span asp-validation-for="TopCategoryId" class="text-danger"></span>
    </div>
    <br />
    <!-- Alt Kategori -->
    <div class="form-group">
        <label asp-for="SubCategoryId" class="form-label fw-semibold text-primary-light text-sm mb-8">
            Alt Kategori Seçin <span class="text-danger-600">*</span>
        </label>
        <select id="SubCategoryId" asp-for="SubCategoryId" class="form-control" asp-items="ViewBag.subCategories" required>
            <option value="" disabled selected>Alt kategori seçin</option>
        </select>
        <span asp-validation-for="SubCategoryId" class="text-danger"></span>
    </div>
    <br />
    <!-- Görsel Karşılaştırma -->
    @if (!string.IsNullOrEmpty(ViewBag.ExistingImageUrl))
    {
        <div class="form-group">
            <label>Fotoğraf Değişikliği</label>
            <div style="display: flex; align-items: center; gap: 20px; flex-wrap: wrap;">
                <div style="text-align: center;">
                    <p>Mevcut</p>
                    <img src="@ViewBag.ExistingImageUrl" alt="Mevcut Görsel" class="img-thumbnail" style="max-height: 150px;" />
                </div>

                <div style="font-size: 2rem;">➡</div>

                <div style="text-align: center;" id="previewContainer" style="display: none;">
                    <p>Yeni</p>
                    <img id="imagePreview" src="#" alt="Yeni Görsel" class="img-thumbnail" style="max-height: 150px; display: none;" />
                </div>
            </div>
        </div>
    }
    <br />

    <div class="form-group mb-3">
        <!-- Üstte açıklama label'ı -->
        <label class="form-label fw-semibold text-primary-light text-sm mb-2">
            Yeni Fotoğraf Yükle (Güncellemek için) <span class="text-danger-600">*</span>
        </label>

        <!-- Buton olarak label, yeni div ile block display -->
        <div class="mb-2">
            <label for="ImageFile"
                   class="border border-primary-600 fw-medium text-primary-600 px-16 py-12 radius-12
                      d-inline-flex align-items-center gap-2 bg-hover-primary-50"
                   style="cursor: pointer; width: fit-content;">
                <iconify-icon icon="solar:upload-linear" class="text-xl"></iconify-icon>
                Fotoğraf Seç
            </label>
            <input asp-for="ImageFile" type="file" id="ImageFile" accept="image/*"
                   class="visually-hidden" onchange="previewImage(event)" />
        </div>

        <!-- Önizleme -->
        <div id="previewContainer" style="display: none; margin-top: 10px;">
            <label>Seçilen Fotoğraf:</label><br />
            <img id="imagePreview" src="#" alt="Yeni seçilen görsel"
                 style="max-height: 150px;" class="img-thumbnail" />
        </div>

        <!-- Hata mesajı -->
        <span asp-validation-for="ImageFile" class="text-danger d-block mt-2"></span>
    </div>

    <br />
    <!-- Kategori Adı -->
    <div class="form-group">
        <label asp-for="Name" class="form-label fw-semibold text-primary-light text-sm mb-8">
            Ürün Grubu / Kategori Seçin <span class="text-danger-600">*</span>
        </label>
        <input asp-for="Name" class="form-control" maxlength="50" required/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <button type="button" class="btn rounded-pill btn-warning-600 radius-8 d-inline-flex align-items-center btn-sm" onclick="updateCategory()">
        <span class="material-symbols-outlined me-1 d-inline-flex align-items-center" style="font-size: 18px;">update</span>
        Güncelle
    </button>
</form>

@section Scripts {
    <script>
        function previewImage(event) {
            const input = event.target;
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = document.getElementById('imagePreview');
                    img.src = e.target.result;
                    img.style.display = 'block';

                    document.getElementById('previewContainer').style.display = 'block';
                };
                reader.readAsDataURL(input.files[0]);
            }
        }


        function updateCategory() {
            const form = document.getElementById("updateCategoryForm");
            const theme = document.documentElement.getAttribute("data-theme");

            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            Swal.fire({
                title: "Değişiklikler kaydedilsin mi?",
                text: "İşlemi onaylıyor musunuz?",
                icon: "question",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, kaydet!",
                cancelButtonText: "İptal",
                background: theme === "dark" ? "#1e1e2f" : "#fff",
                color: theme === "dark" ? "#fff" : "#000",
                reverseButtons: true,
                allowOutsideClick: false,
                allowEscapeKey: false,
                allowEnterKey: false,
                didOpen: () => {
                const confirmBtn = Swal.getConfirmButton();
                const cancelBtn = Swal.getCancelButton();

                const addHoverEffect = (btn, color) => {
                    if (!btn) return;
                    btn.style.transition = "all 0.3s ease";
                    btn.addEventListener("mouseenter", () => {
                        btn.style.boxShadow = `0 4px 20px 0 ${color}80`;
                        btn.style.transform = "translateY(-2px)";
                    });
                    btn.addEventListener("mouseleave", () => {
                        btn.style.boxShadow = "none";
                        btn.style.transform = "translateY(0)";
                    });
                };

                addHoverEffect(confirmBtn, "#3085d6");
                addHoverEffect(cancelBtn, "#ff4d4f");
            }
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>
}
