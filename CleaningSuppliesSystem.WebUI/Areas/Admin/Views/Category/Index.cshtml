@model CategoryViewModel

@{
    ViewData["Title"] = "Kategori Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    ViewData["DeleteFunction"] = "deletedCategory";
    ViewData["DeleteUrlPrefix"] = "/Admin/Category/SoftDeletedCategory/";

    ViewData["MultiDeleteUrl"] = "/Admin/Category/DeleteMultiple";
    ViewData["MultiDeleteConfirmTitle"] = "Seçilen tüm kategorileri silmek istediğinize emin misiniz?";

    int count = 0;
}

<div class="card basic-data-table">
    @Html.AntiForgeryToken()
    <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
        <h5 class="card-title mb-0">Kategori Listesi</h5>
        <div class="d-flex flex-wrap align-items-center gap-2 ms-auto mt-2 mt-md-0">
            <a asp-action="CreateCategory" asp-controller="Category" asp-area="Admin" class="btn rounded-pill btn-info-100 text-info-600 radius-8 d-inline-flex align-items-center">
                <span class="material-symbols-outlined me-1" style="font-size: 18px;">add</span> Yeni Kategori Ekle
            </a>
            <button id="deleteSelectedBtn" class="btn rounded-pill btn-danger-100 text-danger-600 radius-8 d-inline-flex align-items-center" disabled>
                <span class="material-symbols-outlined me-1">delete</span> Seçilenleri Sil
            </button>
                        <a asp-action="DeletedCategory" asp-controller="Category" asp-area="Admin" class="btn btn-danger-600 radius-8 d-inline-flex align-items-center">
                <span class="material-symbols-outlined me-1" style="font-size: 18px;">delete</span> Çöp Kutusu
            </a>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive" style="overflow-y: hidden;">
        <table class="table table-hover mb-0" id="dataTable" style="width: 100%; margin-top: 10px;">
            <thead class="table-light">
                <tr>
                    <th>
                        <input type="checkbox" id="selectAll" class="form-check-input" />
                    </th>
                    <th>Ürün Grubu / Kategori Fotoğrafı</th>
                    <th>Üst Kategori Adı</th>
                    <th>Alt Kategori Adı</th>
                    <th>Kategori Adı</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Son Güncelleme Tarihi</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CategoryViewList)
                {
                    count++;
                    <tr>
                        <td>
                            <label class="d-flex align-items-center mb-0" style="cursor:pointer;">
                                <input type="checkbox" class="form-check-input row-checkbox me-3" data-id="@item.Id" />
                                @count
                            </label>
                        </td>
                        <td>
                            <img src="@Url.Content(item.ImageUrl)" style="width:100px; height:100px;" />
                        </td>
                        <td>@item.TopCategoryName</td>
                        <td>@item.SubCategoryName</td>
                        <td>@item.Name</td>
                        <td>
                            @item.CreatedDate.ToString("dd.MM.yyyy HH:mm") <br />
                            @item.CreatedDate.ToString("dd MMMM yyyy dddd")
                        </td>
                        <td>
                            @(item.UpdatedDate.HasValue
                                ? Html.Raw(item.UpdatedDate.Value.ToString("dd.MM.yyyy HH:mm") + "<br />" + item.UpdatedDate.Value.ToString("dd MMMM yyyy dddd"))
                                : "Henüz güncelleme yapılmadı")
                        </td>
                            <td>
                                <div class="d-flex flex-nowrap gap-2">
                                    <a asp-action="UpdateCategory" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id"
                                       class="btn rounded-pill btn-info-100 text-info-600 radius-8 d-inline-flex align-items-center btn-sm action-btn">
                                        <span class="material-symbols-outlined me-1">edit</span> Düzenle
                                    </a>
                                    <button class="btn rounded-pill btn-danger-100 text-danger-600 radius-8 d-inline-flex align-items-center btn-sm action-btn delete-btn"
                                            data-id="@item.Id">
                                        <span class="material-symbols-outlined me-1">delete</span> Sil
                                    </button>
                                </div>
                            </td>

                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const selectAll = document.getElementById('selectAll');
        const checkboxes = document.querySelectorAll('.row-checkbox');

        if (selectAll) {
            selectAll.addEventListener('change', function () {
                checkboxes.forEach(cb => cb.checked = this.checked);
                toggleMultiDeleteUI();
            });
        }

        document.addEventListener('change', e => {
            if (e.target.classList.contains('row-checkbox')) {
                toggleMultiDeleteUI();
            }
        });

        function toggleMultiDeleteUI() {
            const selectedCount = document.querySelectorAll('.row-checkbox:checked').length;
            const deleteBtn = document.getElementById('deleteSelectedBtn');
            if (deleteBtn) deleteBtn.disabled = selectedCount === 0;

            document.querySelectorAll('.action-btn').forEach(btn => {
                btn.disabled = selectedCount > 0;
                btn.style.pointerEvents = selectedCount > 0 ? 'none' : 'auto';
                btn.style.opacity = selectedCount > 0 ? '0.5' : '1';
            });
        }
    </script>
}