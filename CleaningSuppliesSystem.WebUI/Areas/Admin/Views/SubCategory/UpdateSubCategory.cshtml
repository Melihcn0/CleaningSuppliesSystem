@model UpdateSubCategoryDto
@{
    ViewData["Title"] = "Alt Kategori Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form id="updateSubCategoryForm" method="post">
    <input type="hidden" asp-for="Id" />
    <label>Üst Kategori Seçin</label>
    <select asp-items="@ViewBag.topCategories" asp-for="TopCategoryId" class="form-control">
        <option value="" disabled selected>Marka Seçin</option>
    </select>
    <span asp-validation-for="TopCategoryId" class="text-danger"></span>
    <br />
    <label>Alt Kategori Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <button type="button" onclick="updateSubCategory()" class="btn btn-outline-warning-600">Güncelle</button>
</form>

@section Scripts {
    <script>
        function updateSubCategory() {
            const form = document.getElementById("updateSubCategoryForm");
            const theme = document.documentElement.getAttribute("data-theme");
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            Swal.fire({
                title: "Değişiklikler kaydedilsin mi?",
                text: "İşlemi onaylıyor musunuz?",
                icon: "question",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, kaydet!",
                cancelButtonText: "İptal",
                background: theme === "dark" ? "#1e1e2f" : "#fff",
                color: theme === "dark" ? "#fff" : "#000",
                allowOutsideClick: false,
                allowEscapeKey: false,
                allowEnterKey: false
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }

    </script>
}
