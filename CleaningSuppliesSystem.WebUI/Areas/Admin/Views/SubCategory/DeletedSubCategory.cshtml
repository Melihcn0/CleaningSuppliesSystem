@model SubCategoryViewModel
@{
    ViewData["Title"] = "Silinen Alt Kategoriler Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    ViewData["PermanentDeleteUrl"] = "~/Admin/SubCategory/PermanentDeleteSubCategory";
    ViewData["PermanentDeleteConfirmTitle"] = "Alt kategori kalıcı olarak silinsin mi?";
    
    ViewData["UndoSoftDeleteUrl"] = "~/Admin/SubCategory/UndoSoftDeleteMultiple";
    ViewData["UndoSoftDeleteConfirmTitle"] = "Seçili alt kategoriler geri alınsın mı?";

    ViewData["PermanentDeleteMultipleUrl"] = "~/Admin/SubCategory/PermanentDeleteMultiple";
    ViewData["PermanentDeleteMultipleConfirmTitle"] = "Seçili alt kategoriler kalıcı olarak silinsin mi?";
    
    int count = 0;
}

<div class="card basic-data-table">
    @Html.AntiForgeryToken()
    <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
        <h5 class="card-title mb-0 mt-1">Silinen Alt Kategoriler Listesi</h5>
        <div class="d-flex flex-wrap align-items-center gap-2 ms-auto md-0 mt-1">
            <button id="undosoftdeleteSelectedBtn" class="btn rounded-pill btn-success-600 radius-8 d-inline-flex align-items-center" disabled>
                <span class="material-symbols-outlined me-1 d-inline-flex align-items-center">undo</span> Seçilenleri Geri Al
            </button>
            <button id="permanentdeleteSelectedBtn" class="btn rounded-pill btn-danger-600 radius-8 d-inline-flex align-items-center" disabled>
                <span class="material-symbols-outlined me-1 d-inline-flex align-items-center">delete</span> Seçilenleri Sil
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive" style="overflow-y: hidden;">
        <table class="table table-hover mb-0" id="dataTable" style="width: 100%; margin-top: 10px;">
            <thead>
                <tr>
                    <th class="text-start">
                        <input type="checkbox" id="selectAll" class="form-check-input" /> #
                    </th>
                    <th>Üst Kategori - Alt Kategori</th>
                    <th>Oluşturma | Son Güncelleme | Silinme Tarihleri</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.SubCategoryViewList)
                {
                    count++;
                    <tr>
                        <td>
                            <label class="d-flex align-items-center mb-0" style="cursor:pointer;">
                                <input type="checkbox" class="form-check-input row-checkbox me-3" data-id="@item.Id" />
                                @count
                            </label>
                        </td>
                        <td>@item.TopCategoryName - <b><u>@item.Name</u></b></td>
                            <td>
                                <div class="d-flex flex-column gap-1">
                                    <span>
                                        🟢 <b>Oluşturma:</b>
                                        @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                    </span>
                                    <span>
                                        🟡 <b>Güncelleme:</b>
                                        @(item.UpdatedDate != null
                                            ? item.UpdatedDate.Value.ToString("dd.MM.yyyy HH:mm")
                                            : "Henüz güncelleme yapılmadı")
                                    </span>
                                    <span>
                                        🔴 <b>Silinme:</b>
                                        @item.DeletedDate.Value.ToString("dd.MM.yyyy HH:mm")
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-nowrap gap-2">
                                    <form asp-action="UndoSoftDeletedSubCategory" asp-controller="SubCategory" asp-area="Admin" asp-route-id="@item.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn rounded-pill btn-success-600 radius-8 d-inline-flex align-items-center btn-sm action-btn">
                                            <span class="material-symbols-outlined me-1 d-inline-flex align-items-center" style="font-size: 18px;">undo</span> Geri al
                                        </button>
                                    </form>
                                    <button type="button"
                                            class="btn rounded-pill btn-danger-600 radius-8 d-inline-flex align-items-center btn-sm action-btn permanent-delete-btn"
                                            data-id="@item.Id">
                                        <span class="material-symbols-outlined me-1 d-inline-flex align-items-center" style="font-size: 18px;">delete_forever</span> Sil
                                    </button>
                                </div>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const selectAll = document.getElementById('selectAll');
        const checkboxes = document.querySelectorAll('.row-checkbox');

        if (selectAll) {
            selectAll.addEventListener('change', function () {
                checkboxes.forEach(cb => cb.checked = this.checked);
                toggleMultiDeleteUI();
            });
        }

        document.addEventListener('change', e => {
            if (e.target.classList.contains('row-checkbox')) {
                toggleMultiDeleteUI();
            }
        });

        function toggleMultiDeleteUI() {
            const selectedCount = document.querySelectorAll('.row-checkbox:checked').length;

            const undoBtn = document.getElementById('undosoftdeleteSelectedBtn');
            const permanentDeleteBtn = document.getElementById('permanentdeleteSelectedBtn');

            if (undoBtn) undoBtn.disabled = selectedCount === 0;
            if (permanentDeleteBtn) permanentDeleteBtn.disabled = selectedCount === 0;

            // Tekli action butonları (satırdaki)
            document.querySelectorAll('.action-btn').forEach(btn => {
                btn.disabled = selectedCount > 0;
                btn.style.pointerEvents = selectedCount > 0 ? 'none' : 'auto';
                btn.style.opacity = selectedCount > 0 ? '0.5' : '1';
            });
        }
    </script>
}