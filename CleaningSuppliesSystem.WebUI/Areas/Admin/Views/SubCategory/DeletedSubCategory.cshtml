@model PagedResponse<ResultSubCategoryDto>
@{
    ViewData["Title"] = "Silinen Alt Kategoriler Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    ViewData["PermanentDeleteUrl"] = "~/Admin/SubCategory/PermanentDeleteSubCategory";
    ViewData["PermanentDeleteConfirmTitle"] = "Alt kategori kalıcı olarak silinsin mi?";
    
    ViewData["UndoSoftDeleteUrl"] = "~/Admin/SubCategory/UndoSoftDeleteMultiple";
    ViewData["UndoSoftDeleteConfirmTitle"] = "Seçili alt kategoriler geri alınsın mı?";

    ViewData["PermanentDeleteMultipleUrl"] = "~/Admin/SubCategory/PermanentDeleteMultiple";
    ViewData["PermanentDeleteMultipleConfirmTitle"] = "Seçili alt kategoriler kalıcı olarak silinsin mi?";

}

<div class="card basic-data-table">
    @Html.AntiForgeryToken()
    <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
        <h5 class="card-title mb-0 mt-1">Silinen Alt Kategoriler Listesi</h5>
        <div class="d-flex flex-wrap align-items-center gap-2 ms-auto md-0 mt-1">
            <button id="undosoftdeleteSelectedBtn" class="btn rounded-pill btn-success-600 radius-8 d-inline-flex align-items-center" disabled>
                <span class="material-symbols-outlined me-1 d-inline-flex align-items-center">undo</span> Seçilenleri Geri Al
            </button>
            <button id="permanentdeleteSelectedBtn" class="btn rounded-pill btn-danger-600 radius-8 d-inline-flex align-items-center" disabled>
                <span class="material-symbols-outlined me-1 d-inline-flex align-items-center">delete</span> Seçilenleri Sil
            </button>
        </div>
    </div>
    <div class="card-body">
        <!-- Filtreleme ve sayfa başına veri dropdown'u -->
        <div class="d-flex align-items-center mb-2 gap-3">
            <!-- Arama label + input -->
            <div class="d-flex align-items-center">
                <label for="customSearch" class="me-3">Ara :</label>
                <input type="text" id="customSearch" class="form-control" placeholder="Ara..." style="width: 200px;" />
            </div>

            <!-- Sayfa başına dropdown -->
            <div class="d-flex align-items-center">
                <label for="pageSizeSelect" class="me-3">Sayfa başına :</label>
                <select id="pageSizeSelect" class="form-select w-auto select-balanced">
                    @foreach (var size in new int[] { 10, 30, 50, 100 })
                    {
                        if (Model.PageSize == size)
                        {
                            <option value="@size" selected>@size</option>
                        }
                        else
                        {
                            <option value="@size">@size</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="table-responsive" style="overflow-y: hidden;">
        <table class="table table-hover mb-0" id="dataTable" style="width: 100%; margin-top: 10px;">
            <thead>
                <tr>
                    <th class="text-start no-sort">
                        <input type="checkbox" id="selectAll" class="form-check-input" /> #
                    </th>
                    <th>Üst Kategori - Alt Kategori</th>
                    <th class="no-sort">Oluşturma | Son Güncelleme | Silinme Tarihleri</th>
                    <th class="no-sort">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>
                            <label class="d-flex align-items-center mb-0" style="cursor:pointer;">
                                <input type="checkbox" class="form-check-input row-checkbox me-3" data-id="@item.Id" />
                            </label>
                        </td>
                        <td>@item.TopCategoryName - <b><u>@item.Name</u></b></td>
                            <td>
                                <div class="d-flex flex-column gap-1">
                                    <span>
                                        🟢 <b>Oluşturma:</b>
                                        @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                    </span>
                                    <span>
                                        🟡 <b>Güncelleme:</b>
                                        @(item.UpdatedDate != null
                                            ? item.UpdatedDate.Value.ToString("dd.MM.yyyy HH:mm")
                                            : "Henüz güncelleme yapılmadı")
                                    </span>
                                    <span>
                                        🔴 <b>Silinme:</b>
                                        @item.DeletedDate.Value.ToString("dd.MM.yyyy HH:mm")
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-nowrap gap-2">
                                    <form asp-action="UndoSoftDeletedSubCategory" asp-controller="SubCategory" asp-area="Admin" asp-route-id="@item.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn rounded-pill btn-success-600 radius-8 d-inline-flex align-items-center btn-sm action-btn">
                                            <span class="material-symbols-outlined me-1 d-inline-flex align-items-center" style="font-size: 18px;">undo</span> Geri al
                                        </button>
                                    </form>
                                    <button type="button"
                                            class="btn rounded-pill btn-danger-600 radius-8 d-inline-flex align-items-center btn-sm action-btn permanent-delete-btn"
                                            data-id="@item.Id">
                                        <span class="material-symbols-outlined me-1 d-inline-flex align-items-center" style="font-size: 18px;">delete_forever</span> Kalıcı Sil
                                    </button>
                                </div>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
            @if (Model.TotalPages > 1)
            {
                <div class="d-flex justify-content-end my-1">
                    <ul class="pagination d-flex flex-wrap align-items-center justify-content-end" style="gap:2px;">
                        <!-- İlk sayfa -->
                        <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                            <a class="page-link bg-primary-50 text-secondary-light fw-medium border-0 px-16 py-8 d-flex align-items-center justify-content-center h-40-px w-40-px rounded-pill rounded-end-0"
                               href="@Url.Action("DeletedSubCategory", new { page = 1, pageSize = Model.PageSize })">
                                <iconify-icon icon="ep:d-arrow-left" class="text-lg"></iconify-icon>
                            </a>
                        </li>

                        <!-- Önceki -->
                        <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                            <a class="page-link bg-primary-50 text-secondary-light fw-medium border-0 px-16 py-8 d-flex align-items-center justify-content-center h-40-px w-40-px"
                               href="@Url.Action("DeletedSubCategory", new { page = Model.Page - 1, pageSize = Model.PageSize })">
                                <iconify-icon icon="iconamoon:arrow-left-2-light" class="text-lg"></iconify-icon>
                            </a>
                        </li>

                        <!-- Sayfa numaraları -->
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                <a class="page-link bg-primary-50 text-secondary-light fw-medium border-0 px-16 py-8 d-flex align-items-center justify-content-center h-40-px w-40-px @(i == Model.Page ? "bg-primary-600 text-white" : "")"
                                   href="@Url.Action("DeletedSubCategory", new { page = i, pageSize = Model.PageSize })">@i</a>
                            </li>
                        }

                        <!-- Sonraki -->
                        <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link bg-primary-50 text-secondary-light fw-medium border-0 px-16 py-8 d-flex align-items-center justify-content-center h-40-px w-40-px"
                               href="@Url.Action("DeletedSubCategory", new { page = Model.Page + 1, pageSize = Model.PageSize })">
                                <iconify-icon icon="iconamoon:arrow-right-2-light" class="text-lg"></iconify-icon>
                            </a>
                        </li>

                        <!-- Son sayfa -->
                        <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link bg-primary-50 text-secondary-light fw-medium border-0 px-16 py-8 d-flex align-items-center justify-content-center h-40-px w-40-px rounded-pill rounded-start-0"
                               href="@Url.Action("DeletedSubCategory", new { page = Model.TotalPages, pageSize = Model.PageSize })">
                                <iconify-icon icon="ep:d-arrow-right" class="text-lg"></iconify-icon>
                            </a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Sayfa başına veri sayısı dropdown
        document.getElementById('pageSizeSelect').addEventListener('change', function() {
            const pageSize = this.value;
            window.location.href = '@Url.Action("DeletedSubCategory", "SubCategory", new { area = "Admin" })?page=1&pageSize=' + pageSize;
        });
    </script>
}