@model UpdateServiceDto
@{
    ViewData["Title"] = "Hizmet Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="ServiceIconId">Hizmet İkonu</label>
        <select id="ServiceIconId" name="ServiceIconId" asp-items="ViewBag.serviceIcons" class="form-control">
            <option value="" disabled selected>İkon Seçiniz</option>
        </select>
        <span asp-validation-for="ServiceIconId" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label for="Title">Hizmet Başlığı</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label for="Description">Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-warning-600">Kaydet</button>
    <br />
</form>