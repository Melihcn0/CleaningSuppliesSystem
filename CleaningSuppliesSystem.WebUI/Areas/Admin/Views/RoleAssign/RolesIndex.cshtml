@model List<UserViewModel>
@{
    ViewData["Title"] = "Rol Atama Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    var userIdToEdit = TempData["userId"] != null ? (int)TempData["userId"] : 0;
}

<div class="card basic-data-table">
    @Html.AntiForgeryToken()
    <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
        <h5 class="card-title mb-0">Rol Atama</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive" style="overflow-y: hidden;">
        <table class="table table-hover mb-0" id="dataTable" style="width: 100%; margin-top: 10px;">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Kullanıcı Adı</th>
                    <th>Mail</th>
                    <th>Kayıt Tarihi</th>
                    <th>Rol</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(++count)</td>
                        <td>@item.NameSurname</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>
                            @item.CreatedAt.ToShortDateString() @item.CreatedAt.ToShortTimeString()
                            <br />@item.CreatedAt.ToLongDateString()
                        </td>
                        <td>
                            @foreach (var role in item.Role)
                            {
                                var badgeClass = role == "Customer" ? "bg-dark-dark-gradient"
                                : role == "Admin" ? "bg-dark-info-gradient"
                                : "bg-dark-warning-gradient";

                                var displayText = role == "Customer" ? "Müşteri"
                                : role == "Admin" ? "Yetkili"
                                : role;

                                <span class="badge text-sm fw-semibold @badgeClass px-20 py-9 radius-4 text-white">@displayText</span>
                            }
                        </td>
                        <td>
                            <div class="dropdown dropend">
                                <button class="btn rounded-pill btn-primary-100 text-primary-600 not-active px-18 py-11 dropdown-toggle toggle-icon icon-right"
                                        type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Rol Ata
                                </button>
                                <ul class="dropdown-menu">
                                    @{
                                        var availableRoles = new List<string> { "Admin", "Customer" };
                                        var userRoles = item.Role ?? new List<string>();
                                        var assignableRoles = availableRoles.Except(userRoles).ToList();
                                    }

                                    @if (assignableRoles.Any())
                                    {
                                        foreach (var assignableRole in assignableRoles)
                                        {
                                            var buttonText = assignableRole == "Admin" ? "Yetkili Yap" : "Müşteri Yap";
                                            var badgeClass = assignableRole == "Admin"
                                            ? "badge text-sm fw-semibold text-primary-600 bg-primary-100 px-20 py-9 radius-4"
                                            : "badge text-sm fw-semibold text-dark bg-neutral-300 px-20 py-9 radius-4";

                                            <li>
                                                <form asp-action="AssignRole" asp-controller="RoleAssign" asp-area="Admin" method="post">
                                                    <input type="hidden" name="userId" value="@item.Id" />
                                                    <input type="hidden" name="assignRoleList[0].RoleName" value="@assignableRole" />
                                                    <input type="hidden" name="assignRoleList[0].RoleExist" value="true" />
                                                    <button type="submit" class="@badgeClass">
                                                        @buttonText
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li>
                                            <span class="dropdown-item text-muted">Tüm roller atanmış</span>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        </div>
    </div>
</div>