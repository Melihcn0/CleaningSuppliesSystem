@using CleaningSuppliesSystem.DTO.DTOs.Customer.CustomerProfileDtos
@model CustomerProfileViewModel
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="dashboard-main-body">
    <div class="row gy-4">
        <div class="col-lg-4">
            <div class="user-grid-card position-relative border radius-16 overflow-hidden bg-base h-100">
                <img src="~/images/image6.png" alt="" class="w-100 object-fit-cover">
                <div class=" ms-16 mb-24 me-16 mt--100">
                    <div class="text-center border border-top-0 border-start-0 border-end-0">
                        <img src="~/images/image7.png" alt=""
                             class="border br-white border-width-2-px w-200-px h-200-px rounded-circle object-fit-cover">
                        <h6 class="mb-0 mt-16">
                            @((!string.IsNullOrWhiteSpace(Model.CustomerProfile.FirstName) ||
                                !string.IsNullOrWhiteSpace(Model.CustomerProfile.LastName))
                                ? $"{Model.CustomerProfile.FirstName} {Model.CustomerProfile.LastName}" : "-")
                        </h6>
                        <span class="text-secondary-light mb-16">
                            @(!string.IsNullOrWhiteSpace(Model.CustomerProfile.Email) ? Model.CustomerProfile.Email : "-")
                        </span>

                    </div>
                    <div class="mt-24">
                        <h6 class="text-xl mb-16">Kişisel Bilgiler</h6>
                        <ul>
                            <li class="d-flex align-items-center gap-1 mb-12">
                                <span class="w-30 text-md fw-semibold text-primary-light">Ad Soyad</span>
                                <span class="w-70 text-secondary-light fw-medium">
                                    : @((!string.IsNullOrWhiteSpace(Model.CustomerProfile.FirstName) ||
                                      !string.IsNullOrWhiteSpace(Model.CustomerProfile.LastName))
                                      ? $"{Model.CustomerProfile.FirstName} {Model.CustomerProfile.LastName}"
                                      : "-")
                                </span>
                            </li>
                            <li class="d-flex align-items-center gap-1 mb-12">
                                <span class="w-30 text-md fw-semibold text-primary-light">Kullanıcı Adı</span>
                                <span class="w-70 text-secondary-light fw-medium">: @(Model.CustomerProfile.UserName ?? "-")</span>
                            </li>
                            <li class="d-flex align-items-center gap-1 mb-12">
                                <span class="w-30 text-md fw-semibold text-primary-light">TC Kimlik No</span>
                                <span class="w-70 text-secondary-light fw-medium">: @(Model.CustomerProfile.NationalId ?? "-")</span>
                            </li>
                            <li class="d-flex align-items-center gap-1 mb-12">
                                <span class="w-30 text-md fw-semibold text-primary-light">Telefon</span>
                                <span class="w-70 text-secondary-light fw-medium">: @(Model.CustomerProfile.PhoneNumber ?? "-")</span>
                            </li>
                            <li class="d-flex align-items-center gap-1 mb-12">
                                <span class="w-30 text-md fw-semibold text-primary-light">Son Çıkış</span>
                                <span class="w-70 text-secondary-light fw-medium">
                                    : @(Model.CustomerProfile.LastLogoutAt != DateTime.MinValue
                                      ? Model.CustomerProfile.LastLogoutAt.ToString("dd.MM.yyyy HH:mm")
                                      : "-")
                                </span>
                            </li>
                            <li class="d-flex align-items-center gap-1 mb-12">
                                <span class="w-30 text-md fw-semibold text-primary-light">Adres Başlığı</span>
                                <span class="w-70 text-secondary-light fw-medium">: @(Model.CustomerProfile.AddressTitle ?? "-")</span>
                            </li>
                            <li class="d-flex align-items-center gap-1 mb-12">
                                <span class="w-30 text-md fw-semibold text-primary-light">Açık Adres</span>
                                <span class="w-70 text-secondary-light fw-medium">: @(Model.CustomerProfile.Address ?? "-")</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card h-100">
                <div class="card-body p-24">
                    <ul class="nav border-gradient-tab nav-pills mb-20 d-inline-flex" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link d-flex align-items-center px-24 @(ViewBag.ActiveTab?.ToString() == "pills-edit-profile" ? "active" : "")"
                                    id="pills-edit-profile-tab"
                                    data-bs-toggle="pill"
                                    data-bs-target="#pills-edit-profile"
                                    type="button"
                                    role="tab"
                                    aria-controls="pills-edit-profile"
                                    aria-selected="@(ViewBag.ActiveTab?.ToString() == "pills-edit-profile" ? "true" : "false")">
                                Profilim
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link d-flex align-items-center px-24 @(ViewBag.ActiveTab?.ToString() == "pills-list-address" ? "active" : "")"
                                    id="pills-list-address-tab"
                                    data-bs-toggle="pill"
                                    data-bs-target="#pills-list-address"
                                    type="button"
                                    role="tab"
                                    aria-controls="pills-list-address"
                                    aria-selected="@(ViewBag.ActiveTab?.ToString() == "pills-list-address" ? "true" : "false")">
                                Adreslerim
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link d-flex align-items-center px-24 @(ViewBag.ActiveTab?.ToString() == "pills-add-address" ? "active" : "")"
                                    id="pills-add-address-tab"
                                    data-bs-toggle="pill"
                                    data-bs-target="#pills-add-address"
                                    type="button"
                                    role="tab"
                                    aria-controls="pills-add-address"
                                    aria-selected="@(ViewBag.ActiveTab?.ToString() == "pills-add-address" ? "true" : "false")">
                                Adres Ekle
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link d-flex align-items-center px-24 @(ViewBag.ActiveTab?.ToString() == "pills-notification" ? "active" : "")"
                                    id="pills-notification-tab"
                                    data-bs-toggle="pill"
                                    data-bs-target="#pills-notification"
                                    type="button"
                                    role="tab"
                                    aria-controls="pills-notification"
                                    aria-selected="@(ViewBag.ActiveTab?.ToString() == "pills-notification" ? "true" : "false")">
                                Bildirim Ayarları
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade @(ViewBag.ActiveTab == "pills-edit-profile" ? "show active" : "")"
                             id="pills-edit-profile"
                             role="tabpanel"
                             aria-labelledby="pills-edit-profile-tab">
                            @Html.Partial("_EditProfilePartial", Model.UpdateCustomerProfile)
                        </div>

                        <div class="tab-pane fade @(ViewBag.ActiveTab == "pills-list-address" ? "show active" : "")"
                             id="pills-list-address"
                             role="tabpanel"
                             aria-labelledby="pills-list-address-tab">
                            @Html.Partial("_ResultAddressPartial", Model)
                        </div>

                        <div class="tab-pane fade @(ViewBag.ActiveTab == "pills-add-address" ? "show active" : "")"
                             id="pills-add-address"
                             role="tabpanel"
                             aria-labelledby="pills-add-address-tab">
                            @Html.Partial("_CreateAddressPartial", Model.CreateCustomerProfile)
                        </div>

                        <div class="tab-pane fade @(ViewBag.ActiveTab == "pills-notification" ? "show active" : "")"
                             id="pills-notification"
                             role="tabpanel"
                             aria-labelledby="pills-notification-tab">
                            <!-- Bildirim tab içeriği -->
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.getElementById('PhoneNumber').addEventListener('input', function() {
            let d = this.value.replace(/\D/g,'').substring(0,12);
            if(d.startsWith('0')) d='90'+d.slice(1);
            else if(!d.startsWith('90')) d='90'+d;
            this.value = '+'
                + d.slice(0,2)+' '
                + (d.length>2?d.slice(2,5)+' ':'')
                + (d.length>5?d.slice(5,8)+' ':'')
                + (d.length>8?d.slice(8,10)+' ':'')
                + (d.length>10?d.slice(10,12):'')
                .trim();
        });
    </script>

    <script>
              // SweetAlert fonksiyonunuzun güncellenmiş hali
        function updateCustomerProfile() {
            const form = document.getElementById("updateCustomerProfileForm");
            const theme = document.documentElement.getAttribute("data-theme");

            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            Swal.fire({
                title: "Değişiklikler kaydedilsin mi?",
                text: "İşlemi onaylıyor musunuz?",
                icon: "question",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, kaydet!",
                cancelButtonText: "İptal",
                background: theme === "dark" ? "#1e1e2f" : "#fff",
                color: theme === "dark" ? "#fff" : "#000",
                allowOutsideClick: false,
                allowEscapeKey: false,
                allowEnterKey: false,
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>
}