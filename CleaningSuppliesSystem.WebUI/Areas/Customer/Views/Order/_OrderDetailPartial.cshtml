@model CustomerResultOrderDto
@using System.Globalization

<div class="modal-header">
    <h5 class="modal-title" id="orderDetailModalLabel">Sipariş Detayı</h5>
    <button type="button" class="btn-close js-theme-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
</div>

<div class="modal-body">
    <div class="row mb-3">
        <div class="col-md-6">
            <p><strong>Sipariş No:</strong> #@Model.OrderNumber</p>
            <p><strong>Sipariş Tarihi:</strong> @Model.CreatedDate.ToString("dd MMMM yyyy HH:mm", new CultureInfo("tr-TR"))</p>
        </div>
        <div class="col-md-6">
            @{
                // Toplam KDV dahil fiyat, indirim varsa indirimli fiyat kullanılır
                decimal totalInclVat = Model.OrderItems?.Sum(item =>
                {
                    var hasDiscount = item.DiscountRate.HasValue && item.DiscountRate.Value > 0;
                    var priceInclVat = hasDiscount ? item.Product.DiscountedPriceWithVat : item.Product.PriceWithVat;
                    return priceInclVat * item.Quantity;
                }) ?? 0;
            }

            <p><strong>Toplam Ödenecek Tutar:</strong> @totalInclVat.ToString("C", new CultureInfo("tr-TR"))</p>
            <div class="d-flex align-items-center gap-2">
                <strong>Durum:</strong>
                <span class="@GetStatusClass(Model.Status)">@Model.Status</span>
            </div>
        </div>

    </div>

    <h6 class="fw-bold mt-4 mb-3">Sipariş Edilen Ürünler</h6>

    @if (Model.OrderItems != null && Model.OrderItems.Any())
    {
        <div class="table-responsive custom-datatable-scrollbar" style="overflow-y: hidden;">
            <table class="table table-hover mb-0 js-order-detail-table" style="width: 100%; margin-top: 10px;">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Adet</th>
                        <th>Satış Fiyatı</th>
                        <th>İndirimli Fiyat</th>
                        <th>İndirim Oranı</th>
                        <th>Toplam Tutar</th>
                        <th class="text-center">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        var hasDiscount = item.DiscountRate.HasValue && item.DiscountRate.Value > 0;
                        var priceInclVat = hasDiscount ? item.Product.DiscountedPriceWithVat : item.Product.PriceWithVat;
                        var totalInclVatRow = priceInclVat * item.Quantity;

                        <tr>
                            <td>@item.Product?.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.Product.PriceWithVat.ToString("C", new CultureInfo("tr-TR"))</td>
                            <td>@(hasDiscount ? item.Product.DiscountedPriceWithVat.ToString("C", new CultureInfo("tr-TR")) : "-")</td>
                            <td>@(hasDiscount ? item.DiscountRate.Value.ToString("N0") + "%" : "-")</td>
                            <td>@totalInclVatRow.ToString("C", new CultureInfo("tr-TR"))</td>
                            <td class="text-center">
                                <div class="d-inline-flex gap-2">
                                    <button class="btn btn-sm btn-warning d-inline-flex align-items-center btn-decrement px-2 py-1"
                                            data-id="@item.Id" title="1 Adet Azalt">
                                        1 Azalt
                                    </button>
                                    <button class="btn btn-sm btn-danger d-inline-flex align-items-center btn-remove px-2 py-1"
                                            data-id="@item.Id" title="Tümünü Sil">
                                        Tümünü Sil
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">Bu siparişte ürün bulunmamaktadır.</div>
    }
</div>

<div class="modal-footer js-theme-footer">
    <button type="button" class="btn btn-neutral-600 text-base" data-bs-dismiss="modal">Kapat</button>
</div>

@functions {
    public string GetStatusClass(string status)
    {
        return status switch
        {
            "Teslim Edildi" => "badge text-sm fw-semibold bg-dark-success-gradient px-20 py-9 radius-4 text-white",
            "Hazırlanıyor" => "badge text-sm fw-semibold bg-dark-warning-gradient px-20 py-9 radius-4 text-white",
            "İptal Edildi" => "badge text-sm fw-semibold bg-dark-danger-gradient px-20 py-9 radius-4 text-white",
            "Kargoya Verildi" => "badge text-sm fw-semibold bg-dark-primary-gradient px-20 py-9 radius-4 text-white",
            "Onay Bekleniyor" => "badge text-sm fw-semibold bg-dark-warning-gradient px-20 py-9 radius-4 text-white",
            "Onaylandı" => "badge text-sm fw-semibold bg-dark-warning-gradient px-20 py-9 radius-4 text-white",
            _ => "badge text-sm fw-semibold bg-dark-dark-gradient px-20 py-9 radius-4 text-white"
        };
    }
}