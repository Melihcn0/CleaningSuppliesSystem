    <!-- prism css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/prism.css">
    <!-- file upload css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/file-upload.css">

    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/audioplayer.css">
    <!-- main css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/style.css">
    <!-- Google Material Font -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
</head>
<body>
    <section class="auth bg-base d-flex flex-wrap">
        <div class="auth-left d-lg-block d-none">
            <!--<div class="d-flex align-items-center flex-column h-100 justify-content-center">
                <img src="~/wowdash-admin/assets/images/auth/auth-img.png" alt="">
            </div>-->
        </div>
        <div class="auth-right py-32 px-24 d-flex flex-column justify-content-center">
            <!-- Ana Sayfa Butonu -->
            <a href="~/Home/Index"
               class="btn btn-sm btn-secondary rounded-circle position-absolute top-0 start-0 m-3 z-3 d-flex align-items-center justify-content-center" style="width:38px; height:38px;">
                <span class="material-symbols-outlined">arrow_back</span>
            </a>
            <div class="max-w-464-px mx-auto w-100">
                <div>
                    <!-- <a href="index.html" class="mb-40 max-w-290-px">
                        <img src="~/wowdash-admin/assets/images/logo.png" alt="">
                    </a>-->
                    <h4 class="mb-12">Şifremi Unuttum</h4>
                    <p class="mb-28 text-secondary-light text-lg">Şifrenizi sıfırlamak için sisteme kayıtlı mailinizi girin.</p>
                    <!--<p class="mb-32 text-secondary-light text-lg">Tekrardan Hoş Geldiniz</p>-->
                </div>
                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="Token" />

                    <!-- Yeni Şifre -->
                    <div class="mb-3 position-relative">
                        <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
                        <div class="input-group">
                            <input type="password" class="form-control" asp-for="NewPassword" id="newPassword" />
                            <button class="btn btn-outline-secondary toggle-password" type="button" data-toggle="#newPassword">
                                <i class="ri-eye-line"></i>
                            </button>
                        </div>
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>

                    <!-- Yeni Şifre Tekrar -->
                    <div class="mb-3 position-relative">
                        <label asp-for="ConfirmPassword" class="form-label">Şifreyi Tekrar Girin</label>
                        <div class="input-group">
                            <input type="password" class="form-control" asp-for="ConfirmPassword" id="confirmPassword" />
                            <button class="btn btn-outline-secondary toggle-password" type="button" data-toggle="#confirmPassword">
                                <i class="ri-eye-line"></i>
                            </button>
                        </div>
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>

                    <button type="submit" class="btn btn-success">Şifreyi Güncelle</button>

                </form>

            </div>
        </div>
    </section>

    <!-- jQuery library js -->
    <script src="~/wowdash-admin/assets/js/lib/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/wowdash-admin/assets/js/lib/bootstrap.bundle.min.js"></script>
    <!-- Apex Chart js -->
    <script src="~/wowdash-admin/assets/js/lib/apexcharts.min.js"></script>
    <!-- Data Table js -->
    <script src="~/wowdash-admin//js/lib/dataTables.min.js"></script>
    <!-- Iconify Font js -->
    <script src="~/wowdash-admin/assets/js/lib/iconify-icon.min.js"></script>
    <!-- jQuery UI js -->
    <script src="~/wowdash-admin/assets/js/lib/jquery-ui.min.js"></script>
    <!-- Vector Map js -->
    <script src="~/wowdash-admin/assets/js/lib/jquery-jvectormap-2.0.5.min.js"></script>
    <script src="~/wowdash-admin/assets/js/lib/jquery-jvectormap-world-mill-en.js"></script>
    <!-- Popup js -->
    <script src="~/wowdash-admin/assets/js/lib/magnifc-popup.min.js"></script>
    <!-- Slick Slider js -->
    <script src="~/wowdash-admin/assets/js/lib/slick.min.js"></script>
    <!-- prism js -->
    <script src="~/wowdash-admin/assets/js/lib/prism.js"></script>
    <!-- file upload js -->
    <script src="~/wowdash-admin/assets/js/lib/file-upload.js"></script>
    <!-- audioplayer -->
    <script src="~/wowdash-admin/assets/js/lib/audioplayer.js"></script>
    <!-- main js -->
    <script src="~/wowdash-admin/assets/js/app.js"></script>

    <script>
                    // Sadece bu sayfa için geçici olarak dark mod uygula ve değiştirilmesini engelle
            document.addEventListener("DOMContentLoaded", function () {
                const html = document.documentElement;
                if (html.getAttribute("data-theme") !== "dark") {
                    html.setAttribute("data-theme", "dark");
                }
            });
        // ================== Password Show Hide Js Start ==========
            function initializePasswordToggle(toggleSelector) {
            $(toggleSelector).on('click', function () {
                var $icon = $(this).find('i'); // i öğesini seç
                var input = $($(this).attr("data-toggle"));

                // Şifreyi göster/gizle
                if (input.attr("type") === "password") {
                    input.attr("type", "text");
                    $icon.removeClass("ri-eye-line").addClass("ri-eye-off-line"); // ikonu değiştir
                } else {
                    input.attr("type", "password");
                    $icon.removeClass("ri-eye-off-line").addClass("ri-eye-line"); // ikonu geri al
                }
            });
        }
        initializePasswordToggle('.toggle-password');
    </script>
    @if (TempData["Success"] != null)
    {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                           Swal.fire({
                icon: "success",
                title: "Başarılı",
                text: "@Html.Raw(TempData["Success"].ToString() + " Anasayfaya yönlendiriliyorsunuz...")",
                confirmButtonColor: "#212529",
                timer: 3000,
                timerProgressBar: true,
                showConfirmButton: false,
                backdrop: true,
                allowOutsideClick: false,    // Boş alana tıklama kapalı
                allowEscapeKey: false,       // ESC kapalı
                allowEnterKey: false,        // ENTER kapalı
                didOpen: () => {
                    const progress = document.querySelector('.swal2-timer-progress-bar');
                    if (progress) {
                        progress.style.backgroundColor = "#198754";
                        progress.style.height = "5px";
                        progress.style.borderRadius = "2px";
                    }
                },
                didClose: () => {
                    window.location.href = "/Home/Index";
                }
            });
            });
        </script>
    }

</body>
</html>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["Success"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Şifre Güncellendi!',
                        text: '@TempData["Success"]',
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => {
                        window.location.href = '/Home/Index';
                    });
            </text>
        }
    </script>
}