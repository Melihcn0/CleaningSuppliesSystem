<body>
    </style>
    <section class="auth bg-base d-flex flex-wrap">
        <div class="auth-left d-lg-block d-none">
            <!--<div class="d-flex align-items-center flex-column h-100 justify-content-center">
                <img src="~/wowdash-admin/assets/images/auth/auth-img.png" alt="">
            </div>-->
        </div>
        <div class="auth-right py-32 px-24 d-flex flex-column justify-content-center">
            <!-- Ana Sayfa Butonu -->
            <a href="~/Home/Index"
               class="btn btn-sm btn-secondary rounded-circle position-absolute top-0 start-0 m-3 z-3 d-flex align-items-center justify-content-center" style="width:38px; height:38px;">
                <span class="material-symbols-outlined">arrow_back</span>
            </a>
            <div class="max-w-464-px mx-auto w-100">
                <div>
                    <!-- <a href="index.html" class="mb-40 max-w-290-px">
                        <img src="~/wowdash-admin/assets/images/logo.png" alt="">
                    </a>-->
                    <h4 class="mb-12">Giriş Yap</h4>
                    <p class="mb-28 text-secondary-light text-lg">Sipariş vermek için giriş yapın.</p>
                    <!--<p class="mb-32 text-secondary-light text-lg">Tekrardan Hoş Geldiniz</p>-->
                </div>
                <form asp-action="SignIn" method="post">
                    <div class="mb-3">
                        <label for="Identifier" class="form-label">Email veya Kullanıcı Adı</label>
                        <div class="input-group">
                            <span class="input-group-text border-end-0">
                                <iconify-icon icon="mage:email"></iconify-icon>
                            </span>
                            <input asp-for="Identifier" class="form-control border-start-0" placeholder="Email veya Kullanıcı Adı" />
                        </div>
                        <span asp-validation-for="Identifier" class="text-danger text-sm d-block mt-1"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Password" class="form-label">Şifre</label>
                        <div class="input-group position-relative">
                            <span class="input-group-text border-end-0">
                                <iconify-icon icon="solar:lock-password-outline"></iconify-icon>
                            </span>
                            <input type="password" asp-for="Password" class="form-control border-start-0" id="your-password" placeholder="Şifre" />
                            <span class="toggle-password position-absolute top-50 translate-middle-y end-0 me-3 text-secondary-light cursor-pointer" data-toggle="#your-password">
                                <i class="ri-eye-line"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger text-sm d-block mt-1"></span>
                    </div>

                    <div class="d-flex justify-content-between gap-2">
                        <a href="/PasswordReset/Index" class="text-primary-600 fw-medium">Şifremi unuttum?</a>
                    </div>

                    <button type="submit" class="btn btn-primary text-sm btn-sm px-12 py-16 w-100 radius-12 mt-4">Giriş Yap</button>

                    <div class="mt-4 text-center text-sm">
                        <p class="mb-0">Hesabın yok mu? <a href="/Register/SignUp" class="text-primary-600 fw-semibold">Kayıt ol</a></p>
                    </div>
                </form>

                @if (ViewBag.RemainingAttempts != null)
                {
                    <div class="alert alert-warning mt-2 text-sm">
                        @ViewBag.RemainingAttempts
                    </div>
                }

            </div>
        </div>
    </section>

