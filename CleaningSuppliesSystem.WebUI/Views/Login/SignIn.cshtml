    <script>
                    // Sadece bu sayfa için geçici olarak dark mod uygula ve değiştirilmesini engelle
            document.addEventListener("DOMContentLoaded", function () {
                const html = document.documentElement;
                if (html.getAttribute("data-theme") !== "dark") {
                    html.setAttribute("data-theme", "dark");
                }
            });
        // ================== Password Show Hide Js Start ==========
            function initializePasswordToggle(toggleSelector) {
            $(toggleSelector).on('click', function () {
                var $icon = $(this).find('i'); // i öğesini seç
                var input = $($(this).attr("data-toggle"));

                // Şifreyi göster/gizle
                if (input.attr("type") === "password") {
                    input.attr("type", "text");
                    $icon.removeClass("ri-eye-line").addClass("ri-eye-off-line"); // ikonu değiştir
                } else {
                    input.attr("type", "password");
                    $icon.removeClass("ri-eye-off-line").addClass("ri-eye-line"); // ikonu geri al
                }
            });
        }
        initializePasswordToggle('.toggle-password');
    </script>

</body>
</html>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const type = '@TempData["AlertType"]';
        const msg = '@TempData["AlertMessage"]';
        const remaining = '@ViewBag.RemainingAttempts';

        // Ana alert gösterimi
        if (type && msg) {
            Swal.fire({
                icon: type,
                title: type === 'success' ? 'Başarılı' :
                       type === 'error' ? 'Hata' :
                       type === 'warning' ? 'Uyarı' : 'Bilgi',
                text: msg,
                confirmButtonText: 'Tamam',
                showConfirmButton: true,
                timer: type === 'success' ? 2000 : undefined
            }).then(() => {
                // Başarılı giriş sonrası yönlendirme
                if (type === 'success') {
                    window.location.href = '/Home/Index'; // ➕ role göre dinamikleştirilebilir
                }
            });
        }

        // 🔁 Kalan deneme hakkı varsa ayrı bilgilendirme
        if (remaining && type !== 'error') {
            Swal.fire({
                icon: 'info',
                title: 'Kalan Deneme Hakkınız',
                text: remaining,
                confirmButtonText: 'Tamam'
            });
        }
    </script>
}