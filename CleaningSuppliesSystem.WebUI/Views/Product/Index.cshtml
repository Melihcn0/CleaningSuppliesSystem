@model ProductListViewModel
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/UILayout/Layout.cshtml";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        --warning-gradient: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        --danger-gradient: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
        --card-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        --hover-shadow: 0 30px 80px rgba(0, 0, 0, 0.15);
    }

    body {
        font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
        background-color: white;
        min-height: 100vh;
        line-height: 1.6;
    }

    .main-container {
        min-height: 100vh;
        padding: 2rem 0;
    }

    .page-header {
        background: var(--primary-gradient);
        color: white;
        padding: 3rem 0;
        margin-bottom: 3rem;
        border-radius: 0 0 30px 30px;
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 20"><defs><radialGradient id="a"><stop offset="20%" stop-color="%23fff" stop-opacity="0.1"/><stop offset="100%" stop-color="%23fff" stop-opacity="0"/></radialGradient></defs><rect width="100%" height="100%" fill="url(%23a)"/></svg>');
            animation: shimmer 3s ease-in-out infinite;
        }

  

    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        text-shadow: 0 4px 15px rgba(0,0,0,0.3);
        position: relative;
        z-index: 1;
        letter-spacing: -0.5px;
    }

    .category-sidebar {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        padding: 2.5rem;
        box-shadow: var(--card-shadow);
        position: sticky;
        top: 2rem;
        margin-bottom: 2rem;
    }

    .category-title {
        color: #2d3748;
        font-weight: 700;
        font-size: 1.25rem;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 3px solid transparent;
        background: var(--primary-gradient);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        position: relative;
    }

        .category-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: var(--primary-gradient);
            border-radius: 3px;
        }

    .category-item {
        display: flex;
        align-items: center;
        padding: 1rem 1.5rem;
        color: #4a5568;
        text-decoration: none;
        border-radius: 15px;
        margin-bottom: 0.5rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        font-weight: 500;
        border: 2px solid transparent;
    }

        .category-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: var(--primary-gradient);
            transition: left 0.3s ease;
            z-index: -1;
        }

        .category-item:hover {
            color: white;
            transform: translateX(8px);
            text-decoration: none;
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        }

            .category-item:hover::before {
                left: 0;
            }

        .category-item.active {
            background: var(--primary-gradient);
            color: white;
            font-weight: 600;
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
        }

        .category-item i {
            margin-right: 0.75rem;
            font-size: 1.1rem;
        }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
    }

    .product-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        overflow: hidden;
        box-shadow: var(--card-shadow);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .product-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
            z-index: 1;
            pointer-events: none;
        }

        .product-card:hover {
            transform: translateY(-15px) scale(1.02);
            box-shadow: var(--hover-shadow);
            border-color: rgba(102, 126, 234, 0.3);
        }

            .product-card:hover::before {
                opacity: 1;
            }

    .product-image-container {
        padding: 20px;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        height: 220px;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .product-image {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        border-radius: 15px;
        transition: all 0.4s ease;
        filter: drop-shadow(0 10px 20px rgba(0,0,0,0.1));
    }

    .product-card:hover .product-image {
        transform: scale(1.1) rotate(-2deg);
    }

    .status-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        padding: 0.6rem 1.2rem;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        z-index: 3;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.3);
        animation: float 3s ease-in-out infinite;
    }

    

    .status-badge.in-stock {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        box-shadow: 0 10px 25px rgba(16, 185, 129, 0.4);
    }

    .status-badge.low-stock {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        color: white;
        animation: pulse-glow 2s infinite, float 3s ease-in-out infinite;
        box-shadow: 0 10px 25px rgba(245, 158, 11, 0.5);
    }

    

    .status-badge.out-of-stock {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
        animation: shake 0.5s ease-in-out infinite alternate, float 3s ease-in-out infinite;
        box-shadow: 0 10px 25px rgba(239, 68, 68, 0.5);
    }

    

    .discount-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: var(--secondary-gradient);
        color: white;
        padding: 0.6rem 1.2rem;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 800;
        box-shadow: 0 15px 30px rgba(241, 87, 108, 0.4);
        z-index: 3;
        animation: bounce-discount 2s infinite;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.3);
    }

   

    .product-body {
        padding: 2rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
        z-index: 2;
    }

    .product-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 1.5rem;
        text-align: center;
        line-height: 1.4;
    }

    .price-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .original-price {
        text-decoration: line-through;
        color: #a0aec0;
        font-size: 1rem;
        font-weight: 500;
    }

    .current-price {
        font-size: 1.5rem;
        font-weight: 800;
        background: var(--primary-gradient);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .quantity-controls {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .quantity-input-group {
        display: flex;
        align-items: center;
        background: #f7fafc;
        border-radius: 15px;
        border: 2px solid #e2e8f0;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .quantity-input-group:focus-within {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

    .quantity-btn {
        background: transparent;
        border: none;
        padding: 0.75rem;
        color: #4a5568;
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 0.9rem;
    }

        .quantity-btn:hover {
            background: #e2e8f0;
            color: #2d3748;
        }

    .quantity-input {
        border: none;
        background: transparent;
        text-align: center;
        width: 60px;
        padding: 0.75rem 0;
        font-weight: 600;
        color: #2d3748;
    }

        .quantity-input:focus {
            outline: none;
        }

    .add-to-cart-btn {
        background: var(--primary-gradient);
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 15px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        text-decoration: none;
        flex: 1;
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        min-height: 55px;
        height: 55px;
    }

        .add-to-cart-btn:hover:not(:disabled) {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
            text-decoration: none;
            color: white;
        }

        .add-to-cart-btn:disabled {
            background: linear-gradient(135deg, #cbd5e0, #a0aec0);
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
            min-height: 55px;
            height: 55px;
        }

    .stock-warning {
        background: var(--warning-gradient);
        border: none;
        padding: 1rem 1.5rem;
        border-radius: 15px;
        margin-bottom: 1.5rem;
        color: #744210;
        font-weight: 500;
        text-align: center;
        animation: gentle-pulse 2s infinite;
    }

    

    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: #718096;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(20px);
        border-radius: 25px;
        box-shadow: var(--card-shadow);
        border: 1px solid rgba(255, 255, 255, 0.2);
        max-width: 600px;
        margin: 0 auto;
    }

        .empty-state i {
            margin-bottom: 2rem;
            opacity: 0.6;
            background: var(--primary-gradient);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

    .wide-container {
        max-width: 2078px;
        margin: 0 auto;
        padding: 0 2rem;
        width: 100%;
    }

    .toast-container {
        z-index: 9999;
    }

    .custom-toast {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        box-shadow: var(--card-shadow);
    }    

    .category-sidebar {
        position: static;
        margin-bottom: 2rem;
    }


    .page-title {
        font-size: 2rem;
    }

    .wide-container {
        padding: 0 1rem;
    }

</style>

<div class="main-container">
    <div class="wide-container">
        <div class="row">
            <div class="col-lg-2">
                <div class="category-sidebar">
                    <h4 class="category-title">
                        <i class="fas fa-layer-group me-2"></i>Kategoriler
                    </h4>
                    <div class="category-list">
                        <a href="@Url.Action("Index")" class="category-item @(Model.SelectedCategoryId == null ? "active" : "")">
                            <i class="fas fa-th-large"></i>
                            <span>Tüm Ürünler</span>
                        </a>
                        @foreach (var category in Model.Categories)
                        {
                            <a href="@Url.Action("Index", new { categoryId = category.Id })"
                               class="category-item @(Model.SelectedCategoryId == category.Id ? "active" : "")">
                                <i class="fas fa-tag"></i>
                                <span>@category.Name</span>
                            </a>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-10">
                @if (Model.Products != null && Model.Products.Any())
                {
                    <div class="product-grid">
                        @foreach (var product in Model.Products)
                        {
                            var stockQuantity = product.StockQuantity ?? 0;
                            var isOutOfStock = stockQuantity == 0;
                            var isLowStock = stockQuantity > 0 && stockQuantity <= 30;

                            <div class="product-card" data-product-id="@product.Id">
                                <div class="product-image-container">
                                    <img src="@product.ImageUrl" alt="@product.Name" class="product-image" />

                                    @if (isOutOfStock)
                                    {
                                        <div class="status-badge out-of-stock">
                                            <i class="fas fa-exclamation-triangle me-1"></i> Tükendi
                                            <span class="ms-2 badge rounded-circle bg-danger text-white fw-bold d-inline-flex justify-content-center align-items-center"
                                                  style="width: 2rem; height: 2rem; font-size: 0.75rem;">
                                                @stockQuantity
                                            </span>
                                        </div>
                                    }
                                    else if (isLowStock)
                                    {
                                        <div class="status-badge low-stock">
                                            <i class="fas fa-fire me-1"></i> Tükenmek üzere
                                            <span class="ms-2 badge rounded-circle bg-warning text-white fw-bold d-inline-flex justify-content-center align-items-center"
                                                  style="width: 2rem; height: 2rem; font-size: 0.75rem;">
                                                @stockQuantity
                                            </span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="status-badge in-stock">
                                            <i class="fas fa-check me-1"></i> Stokta Var
                                            <span class="ms-2 badge rounded-circle bg-success text-white fw-bold d-inline-flex justify-content-center align-items-center"
                                                  style="width: 2rem; height: 2rem; font-size: 0.75rem;">
                                                @stockQuantity
                                            </span>
                                        </div>
                                    }

                                    @if (product.DiscountRate > 0)
                                    {
                                        <div class="discount-badge">
                                            <i class="fas fa-percent me-1"></i>@product.DiscountRate.ToString("F0")%
                                        </div>
                                    }
                                </div>

                                <div class="product-body">
                                    <h4 class="product-title">@product.Name</h4>

                                    <div class="price-container">
                                        @if (product.DiscountRate > 0)
                                        {
                                            <span class="original-price">@product.UnitPrice.ToString("0.00") ₺</span>
                                            <span class="current-price">@product.DiscountedPrice.ToString("0.00") ₺</span>
                                        }
                                        else
                                        {
                                            <span class="current-price">@product.UnitPrice.ToString("0.00") ₺</span>
                                        }
                                    </div>



                                    @if (isOutOfStock)
                                    {
                                        <button class="add-to-cart-btn" disabled>
                                            <i class="fas fa-ban me-2"></i> Stokta Yok
                                        </button>
                                    }
                                    else
                                    {
                                        <form asp-area="Customer" asp-controller="Order" asp-action="AddToCart" method="post" class="d-inline">
                                            <div class="quantity-controls">
                                                <input type="number" name="Quantity" class="quantity-input" id="quantity-@product.Id" value="1" min="1" max="@stockQuantity" step="1" />
                                                <input type="hidden" name="ProductId" value="@product.Id" />
                                                <button type="submit" class="add-to-cart-btn">Sepete Ekle</button>
                                            </div>
                                        </form>

                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-search fa-4x mb-4"></i>
                        <h3 class="mb-3">Ürün Bulunamadı</h3>
                        <p class="fs-5">
                            @(Model.SelectedCategoryId.HasValue ? "Bu kategoride" : "Şu anda") görüntülenecek ürün bulunmamaktadır.
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <script>
        window.addEventListener("load", function () {
            Swal.fire({
                icon: 'info',
                title: 'Bilgi',
                html: '@Html.Raw(TempData["ErrorMessage"])',
                allowEscapeKey: false,
                allowEnterKey: false,
                allowOutsideClick: false,
                confirmButtonText: 'Tamam'
            });
        });
    </script>
}


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>

    function showLoginRequiredAlert() {
        Swal.fire({
            title: 'Giriş yapmanız gerekiyor!',
            text: 'Sepete ürün eklemek için lütfen önce giriş yapınız.',
            icon: 'warning',
            confirmButtonText: 'Tamam',
            allowOutsideClick: false,
            allowEscapeKey: false,
            allowEnterKey: false,
            backdrop: true,
            customClass: {
                popup: window.matchMedia('(prefers-color-scheme: dark)').matches ? 'swal2-dark' : ''
            }
        }).then((result) => {
            if (result.isConfirmed) {
                // Kullanıcı 'Tamam'a bastıysa login sayfasına yönlendir
                window.location.href = '/Login/SignIn'; // Giriş sayfanızın URL'sini buraya yazın
            }
        });
    }

        document.querySelectorAll('.quantity-input').forEach(input => {
            input.addEventListener('input', () => {
                let min = parseInt(input.min);
                let max = parseInt(input.max);
                let val = parseInt(input.value);

                if (isNaN(val) || val < min) val = min;
                if (val > max) val = max;

                input.value = val;
            });
        });
    </script>
