    <script>
        $(document).ready(function () {
            const updateThemeElements = () => {
                const theme = document.documentElement.getAttribute("data-theme") || "light";

                // DataTable tema
                $('#dataTable').toggleClass('table-dark', theme === 'dark');

                // Tablolar (ekstra varsa)
                document.querySelectorAll("table").forEach(table => {
                    table.classList.toggle("table-dark", theme === "dark");
                });

                // Logo değişimi
                const logo = document.getElementById("theme-logo");
                if (logo) {
                    logo.src = theme === "dark"
                        ? "/images/kysolutions_logo_light.png"
                        : "/images/kysolutions_logo_dark.png";
                }
            };

            // DataTable hazır olduğunda çalışır
            $('#dataTable').on('init.dt', function () {
                const theme = document.documentElement.getAttribute("data-theme") || "light";
                if (theme === 'dark') {
                    $(this).addClass('table-dark');
                }
                $(this).addClass('loaded'); // fade-in başlar
            });

            // Sayfa ilk yüklemede uygula
            updateThemeElements();

            // Tema değişikliklerini dinle
            const observer = new MutationObserver(() => updateThemeElements());
            observer.observe(document.documentElement, {
                attributes: true,
                attributeFilter: ["data-theme"]
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            if ($('#dataTable').length) {
                const selectedIds = new Set();

                // DataTable başlat
                const table = $('#dataTable').DataTable({
                    responsive: true,
                    paging: false,
                    info: false,
                    searching: true,
                    ordering: true,
                    language: { url: '/wowdash-admin/assets/js/dataTable-tr.json' },
                    columnDefs: [
                        { targets: 'no-sort', orderable: false },
                        { targets: 0, width: "75px" }
                    ],
                    order: [],
                    dom: 'lrtip'
                });

                // Tema değişikliklerini dinle
                const updateThemeElements = () => {
                    const theme = document.documentElement.getAttribute("data-theme") || "light";
                    $('#dataTable').toggleClass('table-dark', theme === 'dark');
                };
                const observer = new MutationObserver(() => updateThemeElements());
                observer.observe(document.documentElement, {
                    attributes: true,
                    attributeFilter: ["data-theme"]
                });

                // Custom search input
                $('#customSearch').on('keyup', function () {
                    table.search(this.value).draw();
                });

                // Info ve sıra numarası güncelle
                function updateTableInfo() {
                    const totalCount = table.rows({ search: 'applied' }).count();
                    if (totalCount > 0) {
                        const start = 1;
                        const end = totalCount;
                        $('#tableInfo').text(`Toplam ${totalCount} kayıttan ${start} - ${end} arası gösteriliyor`);
                    } else {
                        $('#tableInfo').text('');
                    }
                }
                updateTableInfo();

                // Checkbox yönetimi
                const deleteBtn = $('#deleteSelectedBtn');
                const undoBtn = $('#undosoftdeleteSelectedBtn');
                const permanentBtn = $('#permanentdeleteSelectedBtn');

                function toggleMultiDeleteUI() {
                    const selectedCount = $('.row-checkbox:checked').length;
                    deleteBtn.prop('disabled', selectedCount === 0);
                    undoBtn.prop('disabled', selectedCount === 0);
                    permanentBtn.prop('disabled', selectedCount === 0);
                    $('.action-btn').prop('disabled', selectedCount > 0).css({
                        pointerEvents: selectedCount > 0 ? 'none' : 'auto',
                        opacity: selectedCount > 0 ? 0.5 : 1
                    });
                    $('#selectAll').prop('checked', $('.row-checkbox').length === selectedCount);
                }

                // Satır checkbox click
                $(document).on('change', '.row-checkbox', function () {
                    const id = $(this).data('id');
                    if (this.checked) selectedIds.add(id);
                    else selectedIds.delete(id);
                    toggleMultiDeleteUI();
                });

                // Select all
                $(document).on('change', '#selectAll', function () {
                    $('.row-checkbox').prop('checked', this.checked).trigger('change');
                });

                // Satırın ilk hücresine tıklayınca checkbox toggle
                $(document).on('click', '#dataTable tbody tr td:first-child', function (e) {
                    if (!$(e.target).is('input[type="checkbox"]')) {
                        const checkbox = $(this).find('input.row-checkbox');
                        if (checkbox.length) {
                            checkbox.prop('checked', !checkbox.prop('checked')).trigger('change');
                        }
                    }
                });

                // Sıralama / arama sonrası sıra numarası ve info güncelle
                table.on('order.dt search.dt', function () {
                    table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                        const checkbox = $(cell).find('input.row-checkbox');
                        $(cell).empty().append(checkbox).append(' ' + (i + 1));
                    });
                    updateTableInfo();
                }).draw();
            }
        });
    </script>


</body>
