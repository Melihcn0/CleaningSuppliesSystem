@{
    var successMsg = TempData["SuccessMessage"]?.ToString();
    var errorMsg = TempData["ErrorMessage"]?.ToString();
    var isSuccess = !string.IsNullOrEmpty(successMsg);
    var toastId = isSuccess ? "successToast" : "errorToast";
    var toastMessage = isSuccess ? successMsg : errorMsg;
    var bgColor = isSuccess ? "bg-success-100" : "bg-danger-100";
    var textColor = isSuccess ? "text-success-700" : "text-danger-700";
    var borderColor = isSuccess ? "border-success-600" : "border-danger-600";
    var iconHtml = isSuccess
        ? "<iconify-icon icon='akar-icons:double-check' class='icon text-xl'></iconify-icon>"
        : "<iconify-icon icon='mingcute:delete-2-line' class='icon text-xl'></iconify-icon>";
}

@if (toastMessage != null)
{
    <div aria-live="polite" aria-atomic="true"
         class="position-fixed top-0 end-0 p-3"
         style="z-index:1080; margin-top:20px;">
        <div id="@toastId"
             class="alert @bgColor @textColor @borderColor border-start-width-4-px border-top-0 border-end-0 border-bottom-0 px-24 py-13 mb-0 fw-semibold text-lg radius-4 d-flex align-items-center justify-content-between shadow-lg fade show"
             role="alert">
            <div class="d-flex align-items-center gap-2">
                <div class="toast-body d-flex align-items-center">
                    @Html.Raw(iconHtml) <span class="ms-1">@toastMessage</span>
                </div>
                <button type="button" class="remove-button @textColor text-xxl line-height-1" onclick="closeCustomToast('@toastId')">
                    <iconify-icon icon="iconamoon:sign-times-light" class="icon"></iconify-icon>
                </button>
            </div>
        </div>
    </div>

    <script>
        function closeCustomToast(id) {
            const toast = document.getElementById(id);
            if (toast) {
                toast.style.transition = "opacity 0.3s ease";
                toast.style.opacity = "0";
                toast.style.pointerEvents = "none";
                setTimeout(() => toast.remove(), 300);
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            setTimeout(() => closeCustomToast('@toastId'), 4000);
        });
    </script>
}

<script>
    function resetThemeOnLogout() {
        // Tema light olarak sıfırlanır
        document.documentElement.setAttribute("data-theme", "light");

        // JWT token localStorage'dan silinir
        localStorage.removeItem("jwt");

        // Eğer tema localStorage'da ayrı tutuluyorsa onu da sil
        localStorage.removeItem("theme");
    }
</script>

<script>
        function initOrderDetailDataTable() {
        const mainTable = $('#dataTable'); // index sayfasındaki tablo
        const detailTable = $('.js-order-detail-table'); // modal tablosu

        // Tema kopyala
        if(mainTable.hasClass('table-dark')){
            detailTable.addClass('table-dark').removeClass('table-light');
        } else {
            detailTable.addClass('table-light').removeClass('table-dark');
        }

        // Eğer DataTable zaten başlatılmışsa destroy
        if($.fn.DataTable.isDataTable(detailTable)){
            detailTable.DataTable().destroy();
        }

        // Başlat
        detailTable.DataTable({
            paging: false,
            searching: false,
            info: false,
            ordering: false,
            autoWidth: false
        });
    }
</script>

<script>
    function initReadOnlyOrderDataTable() {
        const mainTable = $('#dataTable'); // index sayfasındaki tablo
        const statusTable = $('.js-readonly-order-table'); // status modal tablosu

        // Tema kopyala
        if (mainTable.hasClass('table-dark')) {
            statusTable.addClass('table-dark').removeClass('table-light');
        } else {
            statusTable.addClass('table-light').removeClass('table-dark');
        }

        // Eğer DataTable zaten başlatılmışsa destroy
        if ($.fn.DataTable.isDataTable(statusTable)) {
            statusTable.DataTable().destroy();
        }

        // Başlat
        statusTable.DataTable({
            paging: false,
            searching: false,
            info: false,
            ordering: false,
            autoWidth: false
        });
    }
</script>
