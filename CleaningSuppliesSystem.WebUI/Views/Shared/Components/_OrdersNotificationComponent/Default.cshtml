@model List<ExpiredOrderDto>

<div class="dropdown">
    <button class="has-indicator w-40-px h-40-px bg-neutral-200 rounded-circle d-flex justify-content-center align-items-center" type="button" data-bs-toggle="dropdown">
        <iconify-icon icon="iconoir:bell" class="text-primary-light text-xl"></iconify-icon>
    </button>

    <div class="dropdown-menu to-top dropdown-menu-lg p-0">
        <div class="m-16 py-12 px-16 radius-8 bg-primary-50 mb-16 d-flex align-items-center justify-content-between gap-2">
            <div>
                <h6 class="text-lg text-primary-light fw-semibold mb-0">Bildirimler</h6>
            </div>
            <span class="text-primary-600 fw-semibold text-lg w-40-px h-40-px rounded-circle bg-base d-flex justify-content-center align-items-center">
                @Model.Count
            </span>
        </div>

        <div class="max-h-400-px overflow-y-auto scroll-sm pe-4">
            @if (!Model.Any())
            {
                <div class="px-24 py-12 text-center text-secondary-light">
                    Aktif devam eden sipariş yok
                </div>
            }
            else
            {
                @foreach (var order in Model)
                {
                    <a href="javascript:void(0)" class="px-20 py-10 d-flex align-items-start gap-2 mb-2 justify-content-between">
                        <div class="text-black hover-bg-transparent hover-text-primary d-flex align-items-center gap-2">
                            <!-- Solda yuvarlak mavi icon -->
                            <span class="w-36-px h-36-px bg-primary-subtle text-primary-main rounded-circle d-flex justify-content-center align-items-center flex-shrink-0">
                                <i class="material-symbols-outlined small">notifications</i>
                            </span>

                            <!-- İçerik kısmı -->
                            <div>
                                <h6 class="text-sm fw-bold mb-1" style="text-decoration: underline;">
                                    @order.CustomerNameSurname - #@order.OrderNumber.Substring(order.OrderNumber.IndexOf('-') + 1)
                                </h6>
                                <p class="mb-0 text-xs text-secondary-light">
                                    Durum: <span class="fw-semibold">@order.Status</span>
                                </p>
                                <p class="mb-0 text-xs text-secondary-light">
                                    @order.Message
                                </p>
                            </div>
                        </div>

                        <!-- Sağdaki DiffDays -->
                        <span class="text-xs @(order.DiffDays >= 7 && order.Status == "Onay Bekleniyor" ? "text-danger" : "text-success") flex-shrink-0">
                            @order.DiffDays gün önce
                        </span>

                    </a>
                }

            }
        </div>

        <div class="text-center py-12 px-16">
            <a asp-controller="Order" asp-action="Index" class="text-primary-600 fw-semibold text-md">Tüm Siparişleri Gör</a>
        </div>
    </div>
</div>
