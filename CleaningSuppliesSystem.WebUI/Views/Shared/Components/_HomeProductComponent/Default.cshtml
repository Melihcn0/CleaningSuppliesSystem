@model List<ResultProductDto>
<section class="pb-5">
    <div class="container-lg">
        <div class="row">
            <div class="col-md-12">
                <div class="section-header d-flex flex-wrap justify-content-between my-4">
                    <h2 class="section-title">Son Eklenen Ürünler</h2>
                    <div class="d-flex align-items-center">
                        <a href="#" class="btn btn-dark rounded-1">Tümünü Gör</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="product-grid row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5">
                    @foreach (var item in Model.OrderBy(x => Guid.NewGuid()).Take(10))
                    {
                        <div class="col">
                            <div class="product-item">
                                <figure>
                                    <a href="index.html" title="@item.Name">
                                        <img src="@Url.Content(item.ImageUrl)" alt="ürün resmi" class="tab-image" style="width: 220px; height: 175px;">
                                    </a>
                                </figure>
                                <div class="d-flex flex-column text-center">
                                    <h3 class="fs-6 fw-normal">@item.Name</h3>
                                    <div>
                                        <span class="rating">
                                            <svg width="18" height="18" class="text-warning"><use xlink:href="#star-full"></use></svg>
                                            <svg width="18" height="18" class="text-warning"><use xlink:href="#star-full"></use></svg>
                                            <svg width="18" height="18" class="text-warning"><use xlink:href="#star-full"></use></svg>
                                            <svg width="18" height="18" class="text-warning"><use xlink:href="#star-full"></use></svg>
                                            <svg width="18" height="18" class="text-warning"><use xlink:href="#star-half"></use></svg>
                                        </span>
                                    </div>
                                    <div class="d-flex justify-content-center align-items-center gap-2">
                                        @if (item.DiscountRate > 0)
                                        {
                                            <del>@item.UnitPrice ₺</del>
                                            <span class="text-dark fw-semibold">@item.DiscountedPrice ₺</span>
                                            <span class="badge border border-dark-subtle rounded-0 fw-normal px-1 fs-7 lh-1 text-body-tertiary">
                                                @item.DiscountRate.ToString("F0")% İndirim
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-dark fw-semibold">@item.UnitPrice.ToString("N2") ₺</span>
                                        }
                                    </div>
                                    <div class="button-area p-3 pt-0">
                                        <div class="row g-1 mt-2">
                                            <div class="col-3">
                                                <input type="number" name="quantity" class="form-control border-dark-subtle input-number quantity" value="1">
                                            </div>
                                            <div class="col-7">
                                                <a href="#" class="btn btn-primary rounded-1 p-2 fs-7 btn-cart">
                                                    <svg width="18" height="18"><use xlink:href="#cart"></use></svg> Sepete Ekle
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>