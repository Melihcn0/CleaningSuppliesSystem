@model List<ResultCategoryDto>

<section class="py-5 overflow-hidden">
    <div class="container-lg">
        <div class="row overflow-hidden">
            <div class="col-md-12">
                <div class="marquee-track">
                    <div class="marquee-content">
                        @foreach (var item in Model.Concat(Model))
                        {
                            <div class="category-box text-center no-select">
                                <a href="/Product/Index" class="nav-link d-block">
                                    <img src="@Url.Content(item.ImageUrl)" class="rounded-circle mb-2" alt="@item.Name" />
                                    <h4 class="fs-6 category-title">@item.Name</h4>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .marquee-track {
        width: 100%;
        overflow: hidden;
        position: relative;
        border-radius: 1rem; /* köşeleri yumuşat */
        -webkit-mask-image: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
        mask-image: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
    }

    .marquee-content {
        display: flex;
        gap: 1.25rem;
        width: max-content;
        animation: scroll-left 20s linear infinite;
    }

    /* Hover ile durdurma */
    .marquee-track:hover .marquee-content {
        animation-play-state: paused;
    }

    .category-box {
        flex: 0 0 auto;
        text-align: center;
    }

        .category-box img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 50%; /* yuvarlak görünümlü */
            transition: transform 0.3s ease;
        }

            .category-box img:hover {
                transform: scale(1.05); /* hafif zoom efekti */
            }

    .category-title {
        white-space: nowrap;
        font-size: 1rem;
        margin-top: 0.25rem;
    }

    /* Tıklamayı ve seçimi engelle */
    .no-select {
        pointer-events: none;
        user-select: none;
    }
</style>

