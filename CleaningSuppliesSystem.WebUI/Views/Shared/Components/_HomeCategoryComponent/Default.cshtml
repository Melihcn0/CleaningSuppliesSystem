@model List<ResultCategoryDto>

<section class="py-5 overflow-hidden">
    <div class="container-lg">
        <div class="row">
            <div class="col-md-12">
                <div class="section-header d-flex flex-wrap justify-content-between mb-5">
                    <h2 class="section-title">Kategoriler</h2>
                    <a href="#" class="btn btn-dark">Tümünü Gör</a>
                </div>
            </div>
        </div>

        <div class="row overflow-hidden">
            <div class="col-md-12">
                <div class="marquee-track">
                    <div class="marquee-content">
                        @foreach (var item in Model.Concat(Model))
                        {
                            <div class="category-box text-center">
                                <a href="/category/@item.Id" class="nav-link d-block">
                                    <img src="@Url.Content(item.ImageUrl)" width="161" height="160" class="rounded-circle mb-2" alt="@item.Name" />
                                    <h4 class="fs-6 category-title">@item.Name</h4>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .marquee-track {
        width: 100%;
        overflow: hidden;
        position: relative;
    }

    .marquee-content {
        display: flex;
        gap: 1.25rem;
        width: max-content;
        animation: scroll-left 20s linear infinite;
    }

    .category-box {
        flex: 0 0 auto;
    }

        .category-box img {
            width: 161px;
            height: 160px;
            object-fit: cover;
        }

    .category-title {
        white-space: nowrap;
        font-size: 1rem;
        text-align: center;
    }


</style>
