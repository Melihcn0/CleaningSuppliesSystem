@model UserRegisterDto
@{
    Layout = null;
    var passwordPattern = @"^(?=.*[!#$%^&*(),.?{}|<>])[^\s@]{8,30}$";
}

<!-- meta tags and other links -->
<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ess Star | Kayıt Ol</title>
    <link rel="icon" type="image/png" href="~/wowdash-admin/assets/images/favicon.png" sizes="16x16">
    <!-- remix icon font css  -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/remixicon.css">
    <!-- BootStrap css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/bootstrap.min.css">
    <!-- Apex Chart css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/apexcharts.css">
    <!-- Data Table css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/dataTables.min.css">
    <!-- Text Editor css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/editor-katex.min.css">
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/editor.atom-one-dark.min.css">
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/editor.quill.snow.css">
    <!-- Date picker css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/flatpickr.min.css">
    <!-- Calendar css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/full-calendar.css">
    <!-- Vector Map css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/jquery-jvectormap-2.0.5.css">
    <!-- Popup css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/magnific-popup.css">
    <!-- Slick Slider css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/slick.css">
    <!-- prism css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/prism.css">
    <!-- file upload css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/file-upload.css">

    <link rel="stylesheet" href="~/wowdash-admin/assets/css/lib/audioplayer.css">
    <!-- main css -->
    <link rel="stylesheet" href="~/wowdash-admin/assets/css/style.css">
    <!-- Google Material Font -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
</head>
<body>
   
<section class="auth bg-base d-flex flex-wrap">
    <div class="auth-left d-lg-block d-none">
        <div class="d-flex align-items-center flex-column h-100 justify-content-center">
            <img src="~/images/ess_star_logo_dark.png" alt="login logo">
        </div>
    </div>
    <div class="auth-right py-32 px-24 d-flex flex-column justify-content-center">
        <!-- Ana Sayfa Butonu -->
        <a href="~/Home/Index"
           class="btn btn-sm btn-secondary rounded-circle position-absolute top-0 start-0 m-3 z-3 d-flex align-items-center justify-content-center" style="width:38px; height:38px;">
           <span class="material-symbols-outlined">arrow_back</span>
        </a>

        <div class="max-w-464-px mx-auto w-100">

            <div>
                <h4 class="mb-12 mt-5">Hesap Oluştur</h4>
                <p class="mb-28 text-secondary-light text-lg">Sipariş vermek için hesap oluşturun.</p>
            </div>
                <form method="post">
                    <div class="mb-3">
                        <label for="FirstName" class="form-label">Ad</label>
                        <div class="input-group">
                            <span class="input-group-text border-end-0">
                                <iconify-icon icon="f7:person"></iconify-icon>
                            </span>
                            <input type="text" asp-for="FirstName" class="form-control border-start-0" placeholder="Adınız" minlength="2" maxlength="30" required>
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="mb-3">
                        <label for="LastName" class="form-label">Soyad</label>
                        <div class="input-group">
                            <span class="input-group-text border-end-0">
                                <iconify-icon icon="f7:person"></iconify-icon>
                            </span>
                            <input type="text" asp-for="LastName" class="form-control border-start-0" placeholder="Soyadınız" minlength="2" maxlength="30" required>
                        </div>
                        <span asp-validation-for="LastName" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text border-end-0">
                                <iconify-icon icon="mage:email"></iconify-icon>
                            </span>
                            <input type="email" asp-for="Email" class="form-control border-start-0" placeholder="Email adresiniz" maxlength="50" required>
                        </div>
                        <span asp-validation-for="Email" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="mb-3">
                        <label for="UserName" class="form-label">Kullanıcı Adı</label>
                        <div class="input-group">
                            <span class="input-group-text border-end-0">
                                <iconify-icon icon="f7:person"></iconify-icon>
                            </span>
                            <input type="text" asp-for="UserName" class="form-control border-start-0" placeholder="Kullanıcı Adınız" pattern="^[a-zA-Z0-9._-]+$" title="Kullanıcı adı sadece harf, rakam, nokta, tire ve alt tire içerebilir." maxlength="50">
                        </div>
                        <span asp-validation-for="UserName" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Password" class="form-label">Şifre</label>
                        <div class="input-group">
                            <span class="input-group-text border-end-0">
                                <iconify-icon icon="solar:lock-password-outline"></iconify-icon>
                            </span>
                            <input type="password"
                                   asp-for="Password"
                                   class="form-control border-start-0"
                                   id="Password"
                                   placeholder="Şifre"
                                   minlength="8"
                                   maxlength="30"
                                   required
                                   pattern="@passwordPattern" />

                            <button class="btn btn-outline-secondary toggle-password" type="button" data-toggle="#Password">
                                <i class="ri-eye-line"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="mb-3">
                        <label for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                        <div class="input-group">
                            <span class="input-group-text border-end-0">
                                <iconify-icon icon="solar:lock-password-outline"></iconify-icon>
                            </span>
                            <input type="password"
                                   asp-for="ConfirmPassword"
                                   class="form-control border-start-0"
                                   id="ConfirmPassword"
                                   placeholder="Şifreyi tekrar girin"
                                   minlength="8"
                                   maxlength="30"
                                   required
                                   pattern="@passwordPattern" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger d-block mt-1"></span>
                    </div>



                    <div class="form-check mb-3 d-flex align-items-start">
                        <input class="form-check-input me-2 mt-1"
                               type="checkbox"
                               id="condition"
                               required>
                        <label class="form-check-label" for="condition">
                            Kayıt olarak
                            <a href="#" class="text-primary fw-semibold" data-bs-toggle="modal" data-bs-target="#termsModal">Şartlar & Koşullar</a> ve
                            <a href="#" class="text-primary fw-semibold" data-bs-toggle="modal" data-bs-target="#privacyModal">Gizlilik Politikası</a>'nı kabul etmiş olursunuz.
                        </label>
                    </div>


                    <div class="form-check d-flex align-items-start">
                        <input asp-for="WantsNewsletter" class="form-check-input me-2 mt-1" type="checkbox" />
                        <label asp-for="WantsNewsletter" class="form-check-label">
                            Kampanyalardan haberdar olmak istiyorum
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mt-3">Kayıt Ol</button>

                    <div class="text-center mt-3">
                        <p class="mb-0">Zaten hesabınız var mı? <a href="/Login/SignIn" class="text-primary fw-semibold">Giriş Yap</a></p>
                    </div>
                </form>

                <!-- Şartlar & Koşullar Modal -->
                <div class="modal fade" id="termsModal" tabindex="-1" aria-labelledby="termsModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="termsModalLabel">Şartlar & Koşullar</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Buraya Şartlar & Koşullar içeriğini ekleyebilirsin. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer nec odio. Praesent libero. Sed cursus ante dapibus diam.</p>
                                <p>Detaylar, kullanıcı hakları ve sorumluluklar burada yer alabilir.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Gizlilik Politikası Modal -->
                <div class="modal fade" id="privacyModal" tabindex="-1" aria-labelledby="privacyModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="privacyModalLabel">Gizlilik Politikası</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Buraya Gizlilik Politikası içeriğini ekleyebilirsin. Kullanıcı bilgilerinin nasıl işlendiği ve saklandığı detaylı şekilde burada anlatılabilir.</p>
                                <p>Veri güvenliği ve kullanım şartları burada belirtilir.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                            </div>
                        </div>
                    </div>
                </div>


        </div>
    </div>
</section>

    <!-- jQuery library js -->
    <script src="~/wowdash-admin/assets/js/lib/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/wowdash-admin/assets/js/lib/bootstrap.bundle.min.js"></script>
    <!-- Apex Chart js -->
    <script src="~/wowdash-admin/assets/js/lib/apexcharts.min.js"></script>
    <!-- Data Table js -->
    <script src="~/wowdash-admin/assets/js/lib/dataTables.min.js"></script>
    <!-- Iconify Font js -->
    <script src="~/wowdash-admin/assets/js/lib/iconify-icon.min.js"></script>
    <!-- jQuery UI js -->
    <script src="~/wowdash-admin/assets/js/lib/jquery-ui.min.js"></script>
    <!-- Vector Map js -->
    <script src="~/wowdash-admin/assets/js/lib/jquery-jvectormap-2.0.5.min.js"></script>
    <script src="~/wowdash-admin/assets/js/lib/jquery-jvectormap-world-mill-en.js"></script>
    <!-- Popup js -->
    <script src="~/wowdash-admin/assets/js/lib/magnifc-popup.min.js"></script>
    <!-- Slick Slider js -->
    <script src="~/wowdash-admin/assets/js/lib/slick.min.js"></script>
    <!-- prism js -->
    <script src="~/wowdash-admin/assets/js/lib/prism.js"></script>
    <!-- file upload js -->
    <script src="~/wowdash-admin/assets/js/lib/file-upload.js"></script>
    <!-- audioplayer -->
    <script src="~/wowdash-admin/assets/js/lib/audioplayer.js"></script>

    <!-- main js -->
    <script src="~/wowdash-admin/assets/js/app.js"></script>

    <script>
            // Sadece bu sayfa için geçici olarak dark mod uygula ve değiştirilmesini engelle
            document.addEventListener("DOMContentLoaded", function () {
                const html = document.documentElement;
                if (html.getAttribute("data-theme") !== "dark") {
                    html.setAttribute("data-theme", "dark");
                }
            });


        // ================== Password Show Hide Js Start ==========
        function initializePasswordToggle(toggleSelector) {
            $(toggleSelector).on('click', function () {
                var $icon = $(this).find('i'); // i öğesini seç
                var input = $($(this).attr("data-toggle"));

                // Şifreyi göster/gizle
                if (input.attr("type") === "password") {
                    input.attr("type", "text");
                    $icon.removeClass("ri-eye-line").addClass("ri-eye-off-line"); // ikonu değiştir
                } else {
                    input.attr("type", "password");
                    $icon.removeClass("ri-eye-off-line").addClass("ri-eye-line"); // ikonu geri al
                }
            });
        }
        initializePasswordToggle('.toggle-password');

    </script>

</body>
</html>
